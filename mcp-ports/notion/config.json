{
  "name": "notion",
  "displayName": "Notion",
  "description": "Notion centralizes notes, docs, wikis, and tasks in a unified workspace, letting teams build custom workflows",
  "category": "productivity",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/notion.svg",
  "port": 49391  ,
  "api": {
    "baseURL": "https://api.notion.com/v1",
    "version": "2022-06-28",
    "documentation": "https://developers.notion.com/reference"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Notion OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Notion OAuth App Client Secret"
      },
      {
        "name": "generic_api_key",
        "type": "password",
        "required": true,
        "description": "Notion Internal Integration Token"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": [],
      "authorization_url": "https://api.notion.com/v1/oauth/authorize",
      "token_url": "https://api.notion.com/v1/oauth/token"
    }
  },
  "tools": [
    {
      "name": "search",
      "description": "Search for pages and databases in Notion",
      "endpoint": "/search",
      "method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search query"
        },
        "page_size": {
          "type": "number",
          "required": false,
          "description": "Number of results to return (1-100)",
          "default": 10
        }
      }
    },
    {
      "name": "get_page",
      "description": "Get a specific page by ID",
      "endpoint": "/pages/{page_id}",
      "method": "GET",
      "parameters": {
        "page_id": {
          "type": "string",
          "required": true,
          "description": "Page ID"
        }
      }
    },
    {
      "name": "get_page_blocks",
      "description": "Get blocks/content of a page",
      "endpoint": "/blocks/{block_id}/children",
      "method": "GET",
      "parameters": {
        "page_id": {
          "type": "string",
          "required": true,
          "description": "Page ID"
        }
      }
    },
    {
      "name": "create_page",
      "description": "Create a new page",
      "endpoint": "/pages",
      "method": "POST",
      "parameters": {
        "parent": {
          "type": "object",
          "required": true,
          "description": "Parent page or database ID"
        },
        "properties": {
          "type": "object",
          "required": false,
          "description": "Page properties"
        }
      }
    },
    {
      "name": "update_page",
      "description": "Update page properties",
      "endpoint": "/pages/{page_id}",
      "method": "PATCH",
      "parameters": {
        "page_id": {
          "type": "string",
          "required": true,
          "description": "Page ID"
        },
        "properties": {
          "type": "object",
          "required": false,
          "description": "Properties to update"
        }
      }
    },
    {
      "name": "get_database",
      "description": "Get database information",
      "endpoint": "/databases/{database_id}",
      "method": "GET",
      "parameters": {
        "database_id": {
          "type": "string",
          "required": true,
          "description": "Database ID"
        }
      }
    },
    {
      "name": "query_database",
      "description": "Query database entries",
      "endpoint": "/databases/{database_id}/query",
      "method": "POST",
      "parameters": {
        "database_id": {
          "type": "string",
          "required": true,
          "description": "Database ID"
        },
        "filter": {
          "type": "object",
          "required": false,
          "description": "Filter criteria"
        },
        "sorts": {
          "type": "array",
          "required": false,
          "description": "Sort criteria"
        },
        "page_size": {
          "type": "number",
          "required": false,
          "description": "Number of results",
          "default": 100
        }
      }
    },
    {
      "name": "create_database",
      "description": "Create a new database",
      "endpoint": "/databases",
      "method": "POST",
      "parameters": {
        "parent": {
          "type": "object",
          "required": true,
          "description": "Parent page"
        },
        "title": {
          "type": "array",
          "required": true,
          "description": "Database title"
        },
        "properties": {
          "type": "object",
          "required": true,
          "description": "Database properties schema"
        }
      }
    },
    {
      "name": "update_database",
      "description": "Update database properties",
      "endpoint": "/databases/{database_id}",
      "method": "PATCH",
      "parameters": {
        "database_id": {
          "type": "string",
          "required": true,
          "description": "Database ID"
        },
        "title": {
          "type": "array",
          "required": false,
          "description": "Database title"
        },
        "properties": {
          "type": "object",
          "required": false,
          "description": "Database properties schema"
        }
      }
    },
    {
      "name": "append_blocks",
      "description": "Append blocks to a page",
      "endpoint": "/blocks/{block_id}/children",
      "method": "PATCH",
      "parameters": {
        "page_id": {
          "type": "string",
          "required": true,
          "description": "Page ID"
        },
        "children": {
          "type": "array",
          "required": true,
          "description": "Blocks to append"
        }
      }
    },
    {
      "name": "delete_block",
      "description": "Delete a block",
      "endpoint": "/blocks/{block_id}",
      "method": "DELETE",
      "parameters": {
        "block_id": {
          "type": "string",
          "required": true,
          "description": "Block ID"
        }
      }
    },
    {
      "name": "get_current_user",
      "description": "Get current user information",
      "endpoint": "/users/me",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "list_users",
      "description": "List all users",
      "endpoint": "/users",
      "method": "GET",
      "parameters": {
        "page_size": {
          "type": "number",
          "required": false,
          "description": "Number of users to return",
          "default": 100
        }
      }
    }
  ]
}
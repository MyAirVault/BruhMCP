{
  "name": "amcards",
  "displayName": "AMCards",
  "description": "AMCards enables users to create personalized greeting cards, automate mailing campaigns, strengthen customer relationships",
  "category": "marketing",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/card.svg",
  "port": 49176    ,
  "api": {
    "baseURL": "https://api.amcards.com",
    "version": "v1",
    "documentation": "https://api.amcards.com/docs"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "AMCards API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "get_cards",
      "description": "Retrieves a list of all cards associated with the authenticated account",
      "endpoint": "/cards",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of cards to return",
          "default": 100
        },
        "offset": {
          "type": "number",
          "required": false,
          "description": "Number of cards to skip",
          "default": 0
        }
      }
    },
    {
      "name": "get_contacts",
      "description": "Retrieves a list of contacts with optional filtering",
      "endpoint": "/contacts",
      "method": "GET",
      "parameters": {
        "email": {
          "type": "string",
          "required": false,
          "description": "Filter by email address"
        },
        "first_name": {
          "type": "string",
          "required": false,
          "description": "Filter by first name"
        },
        "last_name": {
          "type": "string",
          "required": false,
          "description": "Filter by last name"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of contacts to return",
          "default": 100
        },
        "skip": {
          "type": "number",
          "required": false,
          "description": "Number of contacts to skip",
          "default": 0
        }
      }
    },
    {
      "name": "create_contact",
      "description": "Create a new contact in the AMCards system",
      "endpoint": "/contacts",
      "method": "POST",
      "parameters": {
        "email": {
          "type": "string",
          "required": true,
          "description": "Contact email address"
        },
        "first_name": {
          "type": "string",
          "required": true,
          "description": "Contact first name"
        },
        "last_name": {
          "type": "string",
          "required": false,
          "description": "Contact last name"
        },
        "phone": {
          "type": "string",
          "required": false,
          "description": "Contact phone number"
        },
        "address": {
          "type": "object",
          "required": false,
          "description": "Contact mailing address"
        }
      }
    },
    {
      "name": "send_card",
      "description": "Send a personalized greeting card to a contact",
      "endpoint": "/cards/send",
      "method": "POST",
      "parameters": {
        "card_id": {
          "type": "string",
          "required": true,
          "description": "ID of the card template to send"
        },
        "recipient": {
          "type": "object",
          "required": true,
          "description": "Recipient contact information"
        },
        "message": {
          "type": "string",
          "required": false,
          "description": "Custom message for the card"
        },
        "scheduled_date": {
          "type": "string",
          "required": false,
          "description": "Date to send the card (YYYY-MM-DD)"
        }
      }
    }
  ]
}
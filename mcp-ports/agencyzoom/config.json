{
  "name": "agencyzoom",
  "displayName": "AgencyZoom",
  "description": "AgencyZoom is for the P&C insurance agent that's looking to increase sales, boost retention and analyze agency & producer performance. A comprehensive CRM platform for insurance professionals.",
  "category": "crm",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/agencyzoom.svg",
  "port": 49169    ,
  "api": {
    "baseURL": "https://api.agencyzoom.com",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/agencyzoom"
  },
  "auth": {
    "type": "bearer_token",
    "fields": [
      {
        "name": "bearer_token",
        "type": "password",
        "required": true,
        "description": "AgencyZoom Bearer Token"
      }
    ],
    "alternative_auth": {
      "type": "basic_jwt",
      "fields": [
        {
          "name": "username",
          "type": "text",
          "required": true,
          "description": "AgencyZoom username"
        },
        {
          "name": "password",
          "type": "password",
          "required": true,
          "description": "AgencyZoom password"
        },
        {
          "name": "access_token",
          "type": "password",
          "required": true,
          "description": "JWT access token"
        }
      ]
    }
  },
  "tools": [
    {
      "name": "get_list_of_producers",
      "description": "Get list of producers in AgencyZoom",
      "endpoint": "/producers",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "authenticate_jwt_sso",
      "description": "Authenticate for JWT via V4 SSO",
      "endpoint": "/auth/sso",
      "method": "POST",
      "parameters": {
        "username": {
          "type": "string",
          "required": true,
          "description": "Username for authentication"
        },
        "password": {
          "type": "string",
          "required": true,
          "description": "Password for authentication"
        }
      }
    },
    {
      "name": "batch_create_contacts",
      "description": "Batch create contacts in AgencyZoom",
      "endpoint": "/contacts/batch",
      "method": "POST",
      "parameters": {
        "contacts": {
          "type": "array",
          "required": true,
          "description": "Array of contact objects to create"
        }
      }
    },
    {
      "name": "batch_create_leads",
      "description": "Batch create leads in AgencyZoom",
      "endpoint": "/leads/batch",
      "method": "POST",
      "parameters": {
        "leads": {
          "type": "array",
          "required": true,
          "description": "Array of lead objects to create"
        }
      }
    },
    {
      "name": "batch_delete_tasks",
      "description": "Batch delete tasks in AgencyZoom",
      "endpoint": "/tasks/batch",
      "method": "DELETE",
      "parameters": {
        "task_ids": {
          "type": "array",
          "required": true,
          "description": "Array of task IDs to delete"
        }
      }
    },
    {
      "name": "change_lead_status",
      "description": "Change lead status in AgencyZoom",
      "endpoint": "/leads/{leadId}/status",
      "method": "PUT",
      "parameters": {
        "leadId": {
          "type": "string",
          "required": true,
          "description": "Lead ID to update"
        },
        "status": {
          "type": "string",
          "required": true,
          "description": "New status for the lead"
        }
      }
    },
    {
      "name": "create_opportunities",
      "description": "Create opportunities in AgencyZoom",
      "endpoint": "/opportunities",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Opportunity name"
        },
        "value": {
          "type": "number",
          "required": false,
          "description": "Opportunity value"
        },
        "stage": {
          "type": "string",
          "required": false,
          "description": "Opportunity stage"
        },
        "contact_id": {
          "type": "string",
          "required": false,
          "description": "Associated contact ID"
        }
      }
    },
    {
      "name": "create_customer_lead_notes",
      "description": "Create customer/lead notes in AgencyZoom",
      "endpoint": "/notes",
      "method": "POST",
      "parameters": {
        "entity_id": {
          "type": "string",
          "required": true,
          "description": "ID of the customer or lead"
        },
        "entity_type": {
          "type": "string",
          "required": true,
          "description": "Type of entity (customer or lead)"
        },
        "note": {
          "type": "string",
          "required": true,
          "description": "Note content"
        }
      }
    },
    {
      "name": "create_tasks",
      "description": "Create tasks in AgencyZoom",
      "endpoint": "/tasks",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Task title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Task description"
        },
        "due_date": {
          "type": "string",
          "required": false,
          "description": "Task due date"
        },
        "assigned_to": {
          "type": "string",
          "required": false,
          "description": "User ID task is assigned to"
        }
      }
    },
    {
      "name": "delete_opportunities",
      "description": "Delete opportunities in AgencyZoom",
      "endpoint": "/opportunities/{opportunityId}",
      "method": "DELETE",
      "parameters": {
        "opportunityId": {
          "type": "string",
          "required": true,
          "description": "Opportunity ID to delete"
        }
      }
    },
    {
      "name": "delete_customers",
      "description": "Delete customers in AgencyZoom",
      "endpoint": "/customers/{customerId}",
      "method": "DELETE",
      "parameters": {
        "customerId": {
          "type": "string",
          "required": true,
          "description": "Customer ID to delete"
        }
      }
    }
  ]
}
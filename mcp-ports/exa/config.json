{
  "name": "exa",
  "displayName": "Exa",
  "description": "Data extraction and search platform for gathering, analyzing, and visualizing information from websites, APIs, or internal databases",
  "category": "analytics",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/elasticsearch.svg",
  "port": 49275  ,
  "api": {
    "baseURL": "https://api.exa.ai",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/exa"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "generic_api_key",
        "type": "password",
        "required": true,
        "description": "Exa API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "generate_answer",
      "description": "Generate direct, citation-backed answers to natural language questions",
      "endpoint": "/answer",
      "method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Natural language question to answer"
        },
        "model": {
          "type": "string",
          "required": false,
          "description": "Model to use for answer generation"
        },
        "stream": {
          "type": "boolean",
          "required": false,
          "description": "Whether to stream the response"
        },
        "text": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include text in response"
        }
      }
    },
    {
      "name": "find_similar",
      "description": "Find web pages semantically similar to a given URL",
      "endpoint": "/findSimilar",
      "method": "POST",
      "parameters": {
        "url": {
          "type": "string",
          "required": true,
          "description": "URL to find similar pages for"
        },
        "highlights": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include highlights"
        },
        "num_results": {
          "type": "number",
          "required": false,
          "description": "Number of similar results to return"
        },
        "summary": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include summary"
        },
        "text": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include text content"
        }
      }
    },
    {
      "name": "get_contents",
      "description": "Retrieve text and highlights from document IDs or URLs",
      "endpoint": "/contents",
      "method": "POST",
      "parameters": {
        "ids": {
          "type": "array",
          "required": true,
          "description": "Array of document IDs or URLs to get content for"
        },
        "highlights": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include highlights"
        },
        "text": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include text content"
        }
      }
    },
    {
      "name": "search",
      "description": "Perform web search with advanced filtering options",
      "endpoint": "/search",
      "method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search query"
        },
        "category": {
          "type": "string",
          "required": false,
          "description": "Category filter for search results"
        },
        "domains": {
          "type": "array",
          "required": false,
          "description": "Array of domains to search within"
        },
        "published_after": {
          "type": "string",
          "required": false,
          "description": "Published after date filter (ISO 8601)"
        },
        "published_before": {
          "type": "string",
          "required": false,
          "description": "Published before date filter (ISO 8601)"
        },
        "num_results": {
          "type": "number",
          "required": false,
          "description": "Number of search results to return"
        },
        "highlights": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include highlights"
        },
        "text": {
          "type": "boolean",
          "required": false,
          "description": "Whether to include text content"
        }
      }
    }
  ]
}
{
  "name": "semanticscholar",
  "displayName": "Semantic Scholar",
  "description": "An AI-powered academic search engine that helps researchers discover and understand scientific literature",
  "category": "ai",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/scholar.svg",
  "port": 49445  ,
  "api": {
    "baseURL": "https://api.semanticscholar.org",
    "version": "v1",
    "documentation": "https://api.semanticscholar.org/api-docs"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "Semantic Scholar API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "get_author_details",
      "description": "Get details about an author",
      "endpoint": "/graph/v1/author/{author_id}",
      "method": "GET",
      "parameters": {
        "author_id": {
          "type": "string",
          "required": true,
          "description": "Author ID"
        }
      }
    },
    {
      "name": "get_author_papers",
      "description": "Get details about an author's papers",
      "endpoint": "/graph/v1/author/{author_id}/papers",
      "method": "GET",
      "parameters": {
        "author_id": {
          "type": "string",
          "required": true,
          "description": "Author ID"
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to include"
        }
      }
    },
    {
      "name": "get_paper_details",
      "description": "Get details about a paper",
      "endpoint": "/graph/v1/paper/{paper_id}",
      "method": "GET",
      "parameters": {
        "paper_id": {
          "type": "string",
          "required": true,
          "description": "Paper ID"
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to include"
        }
      }
    },
    {
      "name": "get_paper_authors",
      "description": "Get details about a paper's authors",
      "endpoint": "/graph/v1/paper/{paper_id}/authors",
      "method": "GET",
      "parameters": {
        "paper_id": {
          "type": "string",
          "required": true,
          "description": "Paper ID"
        }
      }
    },
    {
      "name": "get_paper_citations",
      "description": "Get details about a paper's citations",
      "endpoint": "/graph/v1/paper/{paper_id}/citations",
      "method": "GET",
      "parameters": {
        "paper_id": {
          "type": "string",
          "required": true,
          "description": "Paper ID"
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to include"
        }
      }
    },
    {
      "name": "get_paper_references",
      "description": "Get details about a paper's references",
      "endpoint": "/graph/v1/paper/{paper_id}/references",
      "method": "GET",
      "parameters": {
        "paper_id": {
          "type": "string",
          "required": true,
          "description": "Paper ID"
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to include"
        }
      }
    },
    {
      "name": "search_authors",
      "description": "Search for authors by name",
      "endpoint": "/graph/v1/author/search",
      "method": "GET",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Author name to search for"
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to include"
        }
      }
    },
    {
      "name": "search_papers",
      "description": "Paper relevance search",
      "endpoint": "/graph/v1/paper/search",
      "method": "GET",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search query"
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to include"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of results (max 100)"
        }
      }
    },
    {
      "name": "search_papers_by_title",
      "description": "Paper title search",
      "endpoint": "/graph/v1/paper/search",
      "method": "GET",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Paper title to search for"
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to include"
        }
      }
    }
  ]
}
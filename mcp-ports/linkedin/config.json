{
  "name": "linkedin",
  "displayName": "LinkedIn",
  "description": "LinkedIn is a professional networking platform enabling job seekers, companies, and thought leaders to connect, share content, and discover business opportunities",
  "category": "social",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/linkedin.svg",
  "port": 49350  ,
  "api": {
    "baseURL": "https://api.composio.dev",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/linkedin"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "LinkedIn OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "LinkedIn OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["openid", "profile", "w_member_social", "email"],
      "authorization_url": "https://www.linkedin.com/oauth/v2/authorization",
      "token_url": "https://www.linkedin.com/oauth/v2/accessToken"
    }
  },
  "tools": [
    {
      "name": "create_linkedin_post",
      "description": "Create a LinkedIn post",
      "endpoint": "/tools/linkedin/create_linkedin_post",
      "method": "POST",
      "parameters": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Post content text"
        },
        "visibility": {
          "type": "string",
          "required": false,
          "description": "Post visibility (PUBLIC, CONNECTIONS)"
        }
      }
    },
    {
      "name": "delete_linkedin_post",
      "description": "Delete a LinkedIn post",
      "endpoint": "/tools/linkedin/delete_linkedin_post",
      "method": "DELETE",
      "parameters": {
        "post_id": {
          "type": "string",
          "required": true,
          "description": "Post ID to delete"
        }
      }
    },
    {
      "name": "get_company_info",
      "description": "Get company information",
      "endpoint": "/tools/linkedin/get_company_info",
      "method": "GET",
      "parameters": {
        "company_id": {
          "type": "string",
          "required": true,
          "description": "Company ID to get information for"
        }
      }
    },
    {
      "name": "get_my_info",
      "description": "Get authenticated user's LinkedIn profile information",
      "endpoint": "/tools/linkedin/get_my_info",
      "method": "GET"
    }
  ]
}
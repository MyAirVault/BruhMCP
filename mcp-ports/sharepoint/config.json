{
  "#coming_soon": "SharePoint documentation is not yet available in Composio docs",
  "name": "sharepoint",
  "displayName": "SharePoint",
  "description": "Microsoft SharePoint is a web-based collaborative platform that integrates with Microsoft Office and provides document management, storage, and collaboration capabilities",
  "category": "collaboration",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/microsoftsharepoint.svg",
  "port": 49452  ,
  "api": {
    "baseURL": "https://graph.microsoft.com/v1.0",
    "version": "v1.0",
    "documentation": "https://docs.microsoft.com/en-us/graph/api/resources/sharepoint"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Microsoft SharePoint App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Microsoft SharePoint App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["Sites.Read.All", "Sites.ReadWrite.All", "Files.Read.All", "Files.ReadWrite.All"],
      "authorization_url": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize",
      "token_url": "https://login.microsoftonline.com/common/oauth2/v2.0/token"
    }
  },
  "tools": [
    {
      "name": "list_sites",
      "description": "List SharePoint sites",
      "endpoint": "/sites",
      "method": "GET",
      "parameters": {
        "$top": {
          "type": "number",
          "required": false,
          "description": "Maximum number of sites to return",
          "default": 100
        }
      }
    },
    {
      "name": "get_site",
      "description": "Get site details",
      "endpoint": "/sites/{site_id}",
      "method": "GET",
      "parameters": {
        "site_id": {
          "type": "string",
          "required": true,
          "description": "Site ID to retrieve"
        }
      }
    },
    {
      "name": "list_document_libraries",
      "description": "List document libraries in a site",
      "endpoint": "/sites/{site_id}/drives",
      "method": "GET",
      "parameters": {
        "site_id": {
          "type": "string",
          "required": true,
          "description": "Site ID to list libraries from"
        }
      }
    },
    {
      "name": "list_files",
      "description": "List files in a document library",
      "endpoint": "/sites/{site_id}/drives/{drive_id}/root/children",
      "method": "GET",
      "parameters": {
        "site_id": {
          "type": "string",
          "required": true,
          "description": "Site ID"
        },
        "drive_id": {
          "type": "string",
          "required": true,
          "description": "Drive ID to list files from"
        }
      }
    },
    {
      "name": "upload_file",
      "description": "Upload file to SharePoint",
      "endpoint": "/sites/{site_id}/drives/{drive_id}/root:/{file_name}:/content",
      "method": "PUT",
      "parameters": {
        "site_id": {
          "type": "string",
          "required": true,
          "description": "Site ID to upload to"
        },
        "drive_id": {
          "type": "string",
          "required": true,
          "description": "Drive ID to upload to"
        },
        "file_name": {
          "type": "string",
          "required": true,
          "description": "Name of the file to upload"
        },
        "content": {
          "type": "file",
          "required": true,
          "description": "File content to upload"
        }
      }
    },
    {
      "name": "download_file",
      "description": "Download file from SharePoint",
      "endpoint": "/sites/{site_id}/drives/{drive_id}/items/{item_id}/content",
      "method": "GET",
      "parameters": {
        "site_id": {
          "type": "string",
          "required": true,
          "description": "Site ID"
        },
        "drive_id": {
          "type": "string",
          "required": true,
          "description": "Drive ID"
        },
        "item_id": {
          "type": "string",
          "required": true,
          "description": "File item ID to download"
        }
      }
    }
  ]
}
{
  "name": "tavily",
  "displayName": "Tavily",
  "description": "Search and data retrieval solutions, helping teams quickly locate and filter relevant information",
  "category": "analytics",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/elasticsearch.svg",
  "port": 49480  ,
  "api": {
    "baseURL": "https://api.tavily.com",
    "version": "v1",
    "documentation": "https://docs.tavily.com/"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "generic_api_key",
        "type": "password",
        "required": true,
        "description": "Tavily API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "tavily_search",
      "description": "Perform a web search via the Tavily API with controls for search depth, content types, result count, and domain filtering",
      "endpoint": "/search",
      "method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search query string"
        },
        "max_results": {
          "type": "number",
          "required": false,
          "description": "Maximum number of search results to return",
          "default": 5
        },
        "search_depth": {
          "type": "string",
          "required": false,
          "description": "Depth of search (basic or advanced)",
          "default": "basic"
        },
        "include_domains": {
          "type": "array",
          "required": false,
          "description": "List of domains to include in search results"
        },
        "exclude_domains": {
          "type": "array",
          "required": false,
          "description": "List of domains to exclude from search results"
        },
        "include_answer": {
          "type": "boolean",
          "required": false,
          "description": "Include a direct answer to the query",
          "default": false
        },
        "include_images": {
          "type": "boolean",
          "required": false,
          "description": "Include images in search results",
          "default": false
        },
        "include_raw_content": {
          "type": "boolean",
          "required": false,
          "description": "Include raw content of web pages",
          "default": false
        }
      }
    },
    {
      "name": "search_news",
      "description": "Search for news articles and current events",
      "endpoint": "/search",
      "method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "News search query"
        },
        "max_results": {
          "type": "number",
          "required": false,
          "description": "Maximum number of news results to return",
          "default": 5
        },
        "include_domains": {
          "type": "array",
          "required": false,
          "description": "List of news domains to include"
        },
        "exclude_domains": {
          "type": "array",
          "required": false,
          "description": "List of news domains to exclude"
        }
      }
    },
    {
      "name": "research_search",
      "description": "Perform research-focused search with advanced filtering",
      "endpoint": "/search",
      "method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Research query"
        },
        "search_depth": {
          "type": "string",
          "required": false,
          "description": "Search depth for research",
          "default": "advanced"
        },
        "max_results": {
          "type": "number",
          "required": false,
          "description": "Maximum number of research results",
          "default": 10
        },
        "include_answer": {
          "type": "boolean",
          "required": false,
          "description": "Include synthesized answer",
          "default": true
        },
        "include_raw_content": {
          "type": "boolean",
          "required": false,
          "description": "Include full content for analysis",
          "default": true
        }
      }
    }
  ]
}
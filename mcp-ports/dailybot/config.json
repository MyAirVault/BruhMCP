{
  "name": "dailybot",
  "displayName": "DailyBot",
  "description": "DailyBot simplifies team collaboration and tasks with chat-based standups, reminders, polls, and integrations",
  "category": "collaboration",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/dailybot.svg",
  "port": 49252  ,
  "api": {
    "baseURL": "https://api.dailybot.com",
    "version": "v1",
    "documentation": "https://docs.dailybot.com/api"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "DailyBot API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "find_user_by_uuid",
      "description": "Find user by UUID",
      "endpoint": "/users/{uuid}",
      "method": "GET",
      "parameters": {
        "uuid": {
          "type": "string",
          "required": true,
          "description": "User UUID to find"
        }
      }
    },
    {
      "name": "find_workflow_by_name",
      "description": "Find workflow by name",
      "endpoint": "/workflows/search",
      "method": "GET",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Workflow name to search for"
        }
      }
    },
    {
      "name": "get_all_users",
      "description": "Get all users",
      "endpoint": "/users",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of users to return",
          "default": 100
        },
        "offset": {
          "type": "number",
          "required": false,
          "description": "Number of users to skip",
          "default": 0
        }
      }
    },
    {
      "name": "get_workflows_list",
      "description": "Get workflows list",
      "endpoint": "/workflows",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of workflows to return",
          "default": 100
        }
      }
    },
    {
      "name": "give_kudos",
      "description": "Give kudos to users",
      "endpoint": "/kudos",
      "method": "POST",
      "parameters": {
        "user_id": {
          "type": "string",
          "required": true,
          "description": "User ID to give kudos to"
        },
        "message": {
          "type": "string",
          "required": true,
          "description": "Kudos message"
        },
        "points": {
          "type": "number",
          "required": false,
          "description": "Number of kudos points to give",
          "default": 1
        }
      }
    },
    {
      "name": "send_message",
      "description": "Send message",
      "endpoint": "/messages",
      "method": "POST",
      "parameters": {
        "channel_id": {
          "type": "string",
          "required": true,
          "description": "Channel ID to send message to"
        },
        "text": {
          "type": "string",
          "required": true,
          "description": "Message text to send"
        },
        "user_id": {
          "type": "string",
          "required": false,
          "description": "User ID to send direct message to"
        }
      }
    }
  ]
}
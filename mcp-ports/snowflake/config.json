{
  "name": "snowflake",
  "displayName": "Snowflake",
  "description": "Snowflake is a cloud-based data warehouse offering elastic scaling, secure data sharing, and SQL analytics across multiple cloud environments",
  "category": "data-warehouse",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/snowflake.svg",
  "port": 49462  ,
  "api": {
    "baseURL": "https://{account}.snowflakecomputing.com",
    "version": "v1",
    "documentation": "https://docs.snowflake.com/en/developer-guide/sql-api/"
  },
  "auth": {
    "type": "basic",
    "fields": [
      {
        "name": "username",
        "type": "text",
        "required": true,
        "description": "Snowflake username"
      },
      {
        "name": "password",
        "type": "password",
        "required": true,
        "description": "Snowflake password"
      },
      {
        "name": "subdomain",
        "type": "text",
        "required": true,
        "description": "Snowflake account subdomain"
      },
      {
        "name": "database",
        "type": "text",
        "required": true,
        "description": "Default database name"
      },
      {
        "name": "schema",
        "type": "text",
        "required": true,
        "description": "Default schema name"
      }
    ]
  },
  "tools": [
    {
      "name": "describe_table",
      "description": "Retrieve detailed column information for a specific table",
      "endpoint": "/api/v2/statements",
      "method": "POST",
      "parameters": {
        "database": {
          "type": "string",
          "required": true,
          "description": "Database name"
        },
        "schema": {
          "type": "string",
          "required": true,
          "description": "Schema name"
        },
        "table_name": {
          "type": "string",
          "required": true,
          "description": "Table name to describe"
        }
      }
    },
    {
      "name": "explore_columns",
      "description": "Sample distinct values from specified columns",
      "endpoint": "/api/v2/statements",
      "method": "POST",
      "parameters": {
        "database": {
          "type": "string",
          "required": true,
          "description": "Database name"
        },
        "schema": {
          "type": "string",
          "required": true,
          "description": "Schema name"
        },
        "table_name": {
          "type": "string",
          "required": true,
          "description": "Table name"
        },
        "columns": {
          "type": "array",
          "required": true,
          "description": "Array of column names to explore"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of distinct values to sample"
        }
      }
    },
    {
      "name": "run_query",
      "description": "Execute SQL queries within a specified database and schema",
      "endpoint": "/api/v2/statements",
      "method": "POST",
      "parameters": {
        "statement": {
          "type": "string",
          "required": true,
          "description": "SQL statement to execute"
        },
        "database": {
          "type": "string",
          "required": true,
          "description": "Database name"
        },
        "schema": {
          "type": "string",
          "required": true,
          "description": "Schema name"
        },
        "warehouse": {
          "type": "string",
          "required": false,
          "description": "Warehouse to use for query execution"
        },
        "role": {
          "type": "string",
          "required": false,
          "description": "Role to use for query execution"
        }
      }
    },
    {
      "name": "show_databases",
      "description": "List available databases in the Snowflake account",
      "endpoint": "/api/v2/statements",
      "method": "POST",
      "parameters": {}
    },
    {
      "name": "show_schemas",
      "description": "List schemas within a specific database",
      "endpoint": "/api/v2/statements",
      "method": "POST",
      "parameters": {
        "database": {
          "type": "string",
          "required": true,
          "description": "Database name to list schemas for"
        }
      }
    },
    {
      "name": "show_tables",
      "description": "Retrieve table details including row counts and sizes",
      "endpoint": "/api/v2/statements",
      "method": "POST",
      "parameters": {
        "database": {
          "type": "string",
          "required": true,
          "description": "Database name"
        },
        "schema": {
          "type": "string",
          "required": true,
          "description": "Schema name"
        },
        "like_pattern": {
          "type": "string",
          "required": false,
          "description": "Pattern to filter table names"
        }
      }
    }
  ]
}
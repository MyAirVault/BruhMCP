{
  "name": "todoist",
  "displayName": "Todoist",
  "description": "Todoist is a task management tool allowing users to create to-do lists, set deadlines, and collaborate on projects with reminders and cross-platform syncing",
  "category": "productivity",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/todoist.svg",
  "port": 49491  ,
  "api": {
    "baseURL": "https://api.todoist.com/rest/v2",
    "version": "v2",
    "documentation": "https://developer.todoist.com/rest/"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Todoist OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Todoist OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["data:read_write"],
      "authorization_url": "https://todoist.com/oauth/authorize",
      "token_url": "https://todoist.com/oauth/access_token"
    }
  },
  "tools": [
    {
      "name": "get_all_tasks",
      "description": "Get all tasks",
      "endpoint": "/tasks",
      "method": "GET",
      "parameters": {
        "project_id": {
          "type": "string",
          "required": false,
          "description": "Filter tasks by project ID"
        },
        "section_id": {
          "type": "string",
          "required": false,
          "description": "Filter tasks by section ID"
        },
        "label": {
          "type": "string",
          "required": false,
          "description": "Filter tasks by label name"
        },
        "filter": {
          "type": "string",
          "required": false,
          "description": "Filter tasks by any supported filter"
        }
      }
    },
    {
      "name": "create_task",
      "description": "Create a new task",
      "endpoint": "/tasks",
      "method": "POST",
      "parameters": {
        "content": {
          "type": "string",
          "required": true,
          "description": "Task content/title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Task description"
        },
        "project_id": {
          "type": "string",
          "required": false,
          "description": "Project ID to add task to"
        },
        "section_id": {
          "type": "string",
          "required": false,
          "description": "Section ID to add task to"
        },
        "parent_id": {
          "type": "string",
          "required": false,
          "description": "Parent task ID for subtask"
        },
        "order": {
          "type": "number",
          "required": false,
          "description": "Task order"
        },
        "labels": {
          "type": "array",
          "required": false,
          "description": "Array of label names"
        },
        "priority": {
          "type": "number",
          "required": false,
          "description": "Task priority (1-4, 4 being highest)"
        },
        "due_string": {
          "type": "string",
          "required": false,
          "description": "Human-readable due date (e.g., 'tomorrow', 'next Monday')"
        },
        "due_date": {
          "type": "string",
          "required": false,
          "description": "Due date in YYYY-MM-DD format"
        },
        "due_datetime": {
          "type": "string",
          "required": false,
          "description": "Due datetime in RFC3339 format"
        }
      }
    },
    {
      "name": "close_task",
      "description": "Close (complete) a task",
      "endpoint": "/tasks/{task_id}/close",
      "method": "POST",
      "parameters": {
        "task_id": {
          "type": "string",
          "required": true,
          "description": "Task ID to close"
        }
      }
    },
    {
      "name": "reopen_task",
      "description": "Reopen a completed task",
      "endpoint": "/tasks/{task_id}/reopen",
      "method": "POST",
      "parameters": {
        "task_id": {
          "type": "string",
          "required": true,
          "description": "Task ID to reopen"
        }
      }
    },
    {
      "name": "delete_task",
      "description": "Delete a task",
      "endpoint": "/tasks/{task_id}",
      "method": "DELETE",
      "parameters": {
        "task_id": {
          "type": "string",
          "required": true,
          "description": "Task ID to delete"
        }
      }
    },
    {
      "name": "get_all_projects",
      "description": "Get all projects",
      "endpoint": "/projects",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "create_project",
      "description": "Create a new project",
      "endpoint": "/projects",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Project name"
        },
        "parent_id": {
          "type": "string",
          "required": false,
          "description": "Parent project ID for nested project"
        },
        "color": {
          "type": "string",
          "required": false,
          "description": "Project color"
        },
        "is_favorite": {
          "type": "boolean",
          "required": false,
          "description": "Whether project is favorite",
          "default": false
        }
      }
    },
    {
      "name": "get_all_labels",
      "description": "Get all labels",
      "endpoint": "/labels",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "create_label",
      "description": "Create a new label",
      "endpoint": "/labels",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Label name"
        },
        "order": {
          "type": "number",
          "required": false,
          "description": "Label order"
        },
        "color": {
          "type": "string",
          "required": false,
          "description": "Label color"
        },
        "is_favorite": {
          "type": "boolean",
          "required": false,
          "description": "Whether label is favorite",
          "default": false
        }
      }
    },
    {
      "name": "get_all_comments",
      "description": "Get all comments for a task or project",
      "endpoint": "/comments",
      "method": "GET",
      "parameters": {
        "task_id": {
          "type": "string",
          "required": false,
          "description": "Task ID to get comments for"
        },
        "project_id": {
          "type": "string",
          "required": false,
          "description": "Project ID to get comments for"
        }
      }
    }
  ]
}
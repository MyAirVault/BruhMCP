{
  "name": "attio",
  "displayName": "Attio",
  "description": "Attio is a fully customizable workspace for your team's relationships and workflows. A modern CRM platform designed for flexible relationship management and workflow automation.",
  "category": "crm",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/attio.svg",
  "port": 49187    ,
  "api": {
    "baseURL": "https://api.attio.com",
    "version": "v2",
    "documentation": "https://v3.docs.composio.dev/tools/attio"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Attio OAuth2 Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Attio OAuth2 Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["read", "write"],
      "authorization_url": "https://app.attio.com/oauth/authorize",
      "token_url": "https://app.attio.com/oauth/token"
    }
  },
  "tools": [
    {
      "name": "create_record",
      "description": "Create a new record in Attio",
      "endpoint": "/v2/objects/{object}/records",
      "method": "POST",
      "parameters": {
        "object": {
          "type": "string",
          "required": true,
          "description": "Object type (people, companies, deals, etc.)"
        },
        "values": {
          "type": "object",
          "required": true,
          "description": "Record field values"
        }
      }
    },
    {
      "name": "find_record",
      "description": "Find a specific record in Attio",
      "endpoint": "/v2/objects/{object}/records",
      "method": "GET",
      "parameters": {
        "object": {
          "type": "string",
          "required": true,
          "description": "Object type to search in"
        },
        "filter": {
          "type": "object",
          "required": false,
          "description": "Filter criteria for finding records"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of records to return"
        }
      }
    },
    {
      "name": "list_records",
      "description": "List records from an object in Attio",
      "endpoint": "/v2/objects/{object}/records",
      "method": "GET",
      "parameters": {
        "object": {
          "type": "string",
          "required": true,
          "description": "Object type to list records from"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of records to return"
        },
        "offset": {
          "type": "number",
          "required": false,
          "description": "Number of records to skip"
        }
      }
    },
    {
      "name": "update_record",
      "description": "Update an existing record in Attio",
      "endpoint": "/v2/objects/{object}/records/{recordId}",
      "method": "PUT",
      "parameters": {
        "object": {
          "type": "string",
          "required": true,
          "description": "Object type"
        },
        "recordId": {
          "type": "string",
          "required": true,
          "description": "Record ID to update"
        },
        "values": {
          "type": "object",
          "required": true,
          "description": "Updated field values"
        }
      }
    },
    {
      "name": "delete_record",
      "description": "Delete a record in Attio",
      "endpoint": "/v2/objects/{object}/records/{recordId}",
      "method": "DELETE",
      "parameters": {
        "object": {
          "type": "string",
          "required": true,
          "description": "Object type"
        },
        "recordId": {
          "type": "string",
          "required": true,
          "description": "Record ID to delete"
        }
      }
    },
    {
      "name": "create_note",
      "description": "Create a note in Attio",
      "endpoint": "/v2/notes",
      "method": "POST",
      "parameters": {
        "content": {
          "type": "string",
          "required": true,
          "description": "Note content"
        },
        "parent_object": {
          "type": "string",
          "required": false,
          "description": "Parent object type"
        },
        "parent_record_id": {
          "type": "string",
          "required": false,
          "description": "Parent record ID"
        }
      }
    },
    {
      "name": "list_notes",
      "description": "List notes in Attio",
      "endpoint": "/v2/notes",
      "method": "GET",
      "parameters": {
        "parent_object": {
          "type": "string",
          "required": false,
          "description": "Filter by parent object type"
        },
        "parent_record_id": {
          "type": "string",
          "required": false,
          "description": "Filter by parent record ID"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of notes to return"
        }
      }
    }
  ]
}
{
  "name": "hubspot",
  "displayName": "HubSpot",
  "description": "HubSpot is an inbound marketing, sales, and customer service platform integrating CRM, email automation, and analytics",
  "category": "crm",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/hubspot.svg",
  "port": 49321  ,
  "api": {
    "baseURL": "https://api.hubapi.com",
    "version": "v3",
    "documentation": "https://developers.hubspot.com/docs/api/overview"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "HubSpot OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "HubSpot OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": [
        "crm.objects.contacts.read",
        "crm.objects.contacts.write",
        "crm.objects.companies.read",
        "crm.objects.companies.write",
        "crm.objects.deals.read",
        "crm.objects.deals.write",
        "crm.objects.tickets.read",
        "crm.objects.tickets.write",
        "marketing",
        "sales"
      ],
      "authorization_url": "https://app.hubspot.com/oauth/authorize",
      "token_url": "https://api.hubapi.com/oauth/v1/token"
    }
  },
  "tools": [
    {
      "name": "create_contact",
      "description": "Create a new contact",
      "endpoint": "/crm/v3/objects/contacts",
      "method": "POST",
      "parameters": {
        "properties": {
          "type": "object",
          "required": true,
          "description": "Contact properties (email, firstname, lastname, etc.)"
        }
      }
    },
    {
      "name": "get_contact",
      "description": "Get contact by ID",
      "endpoint": "/crm/v3/objects/contacts/{contactId}",
      "method": "GET",
      "parameters": {
        "contactId": {
          "type": "string",
          "required": true,
          "description": "Contact ID"
        }
      }
    },
    {
      "name": "list_contacts",
      "description": "List all contacts",
      "endpoint": "/crm/v3/objects/contacts",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of results per page",
          "default": 100
        }
      }
    },
    {
      "name": "update_contact",
      "description": "Update contact properties",
      "endpoint": "/crm/v3/objects/contacts/{contactId}",
      "method": "PATCH",
      "parameters": {
        "contactId": {
          "type": "string",
          "required": true,
          "description": "Contact ID"
        },
        "properties": {
          "type": "object",
          "required": true,
          "description": "Properties to update"
        }
      }
    },
    {
      "name": "create_company",
      "description": "Create a new company",
      "endpoint": "/crm/v3/objects/companies",
      "method": "POST",
      "parameters": {
        "properties": {
          "type": "object",
          "required": true,
          "description": "Company properties (name, domain, etc.)"
        }
      }
    },
    {
      "name": "list_companies",
      "description": "List all companies",
      "endpoint": "/crm/v3/objects/companies",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of results per page",
          "default": 100
        }
      }
    },
    {
      "name": "create_deal",
      "description": "Create a new deal",
      "endpoint": "/crm/v3/objects/deals",
      "method": "POST",
      "parameters": {
        "properties": {
          "type": "object",
          "required": true,
          "description": "Deal properties (dealname, amount, pipeline, etc.)"
        }
      }
    },
    {
      "name": "list_deals",
      "description": "List all deals",
      "endpoint": "/crm/v3/objects/deals",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of results per page",
          "default": 100
        }
      }
    },
    {
      "name": "create_ticket",
      "description": "Create a new support ticket",
      "endpoint": "/crm/v3/objects/tickets",
      "method": "POST",
      "parameters": {
        "properties": {
          "type": "object",
          "required": true,
          "description": "Ticket properties (subject, content, priority, etc.)"
        }
      }
    },
    {
      "name": "list_tickets",
      "description": "List all tickets",
      "endpoint": "/crm/v3/objects/tickets",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of results per page",
          "default": 100
        }
      }
    },
    {
      "name": "create_batch_tickets",
      "description": "Create batch of tickets",
      "endpoint": "/crm/v3/objects/tickets/batch",
      "method": "POST",
      "parameters": {
        "inputs": {
          "type": "array",
          "required": true,
          "description": "Array of ticket objects to create"
        }
      }
    },
    {
      "name": "list_products",
      "description": "List all products",
      "endpoint": "/crm/v3/objects/products",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of results per page",
          "default": 100
        }
      }
    }
  ]
}
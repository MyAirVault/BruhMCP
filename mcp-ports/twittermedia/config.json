{
  "#coming_soon": "Documentation for Twitter Media is not yet available in the Composio docs",
  "name": "twittermedia",
  "displayName": "Twitter Media",
  "description": "Twitter Media API for uploading and managing media content for tweets",
  "category": "marketing",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/twitter.svg",
  "port": 49497  ,
  "api": {
    "baseURL": "https://upload.twitter.com/1.1",
    "version": "1.1",
    "documentation": "https://developer.twitter.com/en/docs/twitter-api"
  },
  "auth": {
    "type": "oauth1",
    "fields": [
      {
        "name": "consumer_key",
        "type": "text",
        "required": true,
        "description": "Twitter API Consumer Key"
      },
      {
        "name": "consumer_secret",
        "type": "password",
        "required": true,
        "description": "Twitter API Consumer Secret"
      },
      {
        "name": "access_token",
        "type": "text",
        "required": true,
        "description": "Twitter API Access Token"
      },
      {
        "name": "access_token_secret",
        "type": "password",
        "required": true,
        "description": "Twitter API Access Token Secret"
      }
    ]
  },
  "tools": [
    {
      "name": "upload_media",
      "description": "Upload media (image, video, GIF) to Twitter",
      "endpoint": "/media/upload.json",
      "method": "POST",
      "parameters": {
        "media": {
          "type": "file",
          "required": true,
          "description": "Media file to upload"
        },
        "media_category": {
          "type": "string",
          "required": false,
          "description": "Media category (tweet_image, tweet_video, tweet_gif)"
        },
        "additional_owners": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of user IDs"
        }
      }
    },
    {
      "name": "upload_media_chunked",
      "description": "Upload large media files using chunked upload",
      "endpoint": "/media/upload.json",
      "method": "POST",
      "parameters": {
        "command": {
          "type": "string",
          "required": true,
          "description": "Command (INIT, APPEND, FINALIZE)"
        },
        "total_bytes": {
          "type": "number",
          "required": false,
          "description": "Total file size in bytes (for INIT)"
        },
        "media_type": {
          "type": "string",
          "required": false,
          "description": "MIME type (for INIT)"
        },
        "media_id": {
          "type": "string",
          "required": false,
          "description": "Media ID (for APPEND, FINALIZE)"
        },
        "segment_index": {
          "type": "number",
          "required": false,
          "description": "Chunk segment index (for APPEND)"
        },
        "media": {
          "type": "file",
          "required": false,
          "description": "Media chunk data (for APPEND)"
        }
      }
    },
    {
      "name": "create_subtitle",
      "description": "Create subtitle for video media",
      "endpoint": "/media/subtitles/create.json",
      "method": "POST",
      "parameters": {
        "media_id": {
          "type": "string",
          "required": true,
          "description": "Media ID of uploaded video"
        },
        "media_category": {
          "type": "string",
          "required": true,
          "description": "Media category"
        },
        "subtitle_info": {
          "type": "object",
          "required": true,
          "description": "Subtitle information including subtitles array"
        }
      }
    },
    {
      "name": "get_media_status",
      "description": "Check processing status of uploaded media",
      "endpoint": "/media/upload.json",
      "method": "GET",
      "parameters": {
        "command": {
          "type": "string",
          "required": true,
          "description": "STATUS command"
        },
        "media_id": {
          "type": "string",
          "required": true,
          "description": "Media ID to check status"
        }
      }
    }
  ]
}
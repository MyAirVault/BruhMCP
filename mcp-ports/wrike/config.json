{
  "name": "wrike",
  "displayName": "Wrike",
  "description": "Wrike is a project management and collaboration tool offering customizable workflows, Gantt charts, reporting, and resource management",
  "category": "productivity",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/wrike.svg",
  "port": 49514  ,
  "api": {
    "baseURL": "https://api.composio.dev",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/wrike"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Wrike OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Wrike OAuth App Client Secret"
      },
      {
        "name": "bearer_token",
        "type": "password",
        "required": false,
        "description": "Wrike Bearer Token (alternative to OAuth)"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["default"],
      "authorization_url": "https://login.wrike.com/oauth2/authorize/v4",
      "token_url": "https://login.wrike.com/oauth2/token"
    }
  },
  "tools": [
    {
      "name": "create_folder",
      "description": "Create a new folder",
      "endpoint": "/tools/wrike/create_folder",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Folder title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Folder description"
        },
        "parent_folder_id": {
          "type": "string",
          "required": false,
          "description": "Parent folder ID"
        }
      }
    },
    {
      "name": "create_invitation",
      "description": "Create an invitation to join workspace",
      "endpoint": "/tools/wrike/create_invitation",
      "method": "POST",
      "parameters": {
        "email": {
          "type": "string",
          "required": true,
          "description": "Email address to invite"
        },
        "role": {
          "type": "string",
          "required": false,
          "description": "User role (User, Collaborator, External)"
        },
        "external": {
          "type": "boolean",
          "required": false,
          "description": "Whether user is external"
        }
      }
    },
    {
      "name": "create_task_in_folder",
      "description": "Create a task in a folder",
      "endpoint": "/tools/wrike/create_task_in_folder",
      "method": "POST",
      "parameters": {
        "folder_id": {
          "type": "string",
          "required": true,
          "description": "Folder ID"
        },
        "title": {
          "type": "string",
          "required": true,
          "description": "Task title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Task description"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "Task status"
        },
        "importance": {
          "type": "string",
          "required": false,
          "description": "Task importance (High, Normal, Low)"
        }
      }
    },
    {
      "name": "get_account_information",
      "description": "Get account information",
      "endpoint": "/tools/wrike/get_account_information",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "modify_folder",
      "description": "Modify an existing folder",
      "endpoint": "/tools/wrike/modify_folder",
      "method": "PUT",
      "parameters": {
        "folder_id": {
          "type": "string",
          "required": true,
          "description": "Folder ID to modify"
        },
        "title": {
          "type": "string",
          "required": false,
          "description": "New folder title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "New folder description"
        }
      }
    },
    {
      "name": "modify_task",
      "description": "Modify an existing task",
      "endpoint": "/tools/wrike/modify_task",
      "method": "PUT",
      "parameters": {
        "task_id": {
          "type": "string",
          "required": true,
          "description": "Task ID to modify"
        },
        "title": {
          "type": "string",
          "required": false,
          "description": "New task title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "New task description"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "New task status"
        }
      }
    },
    {
      "name": "delete_folder",
      "description": "Delete a folder",
      "endpoint": "/tools/wrike/delete_folder",
      "method": "DELETE",
      "parameters": {
        "folder_id": {
          "type": "string",
          "required": true,
          "description": "Folder ID to delete"
        }
      }
    },
    {
      "name": "delete_task",
      "description": "Delete a task",
      "endpoint": "/tools/wrike/delete_task",
      "method": "DELETE",
      "parameters": {
        "task_id": {
          "type": "string",
          "required": true,
          "description": "Task ID to delete"
        }
      }
    },
    {
      "name": "fetch_tasks",
      "description": "Fetch tasks from workspace",
      "endpoint": "/tools/wrike/fetch_tasks",
      "method": "GET",
      "parameters": {
        "folder_id": {
          "type": "string",
          "required": false,
          "description": "Filter by folder ID"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "Filter by status"
        }
      }
    },
    {
      "name": "manage_groups",
      "description": "Manage user groups",
      "endpoint": "/tools/wrike/manage_groups",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Group title"
        },
        "member_ids": {
          "type": "array",
          "required": false,
          "description": "Array of member IDs"
        }
      }
    },
    {
      "name": "manage_custom_fields",
      "description": "Manage custom fields",
      "endpoint": "/tools/wrike/manage_custom_fields",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Custom field title"
        },
        "type": {
          "type": "string",
          "required": true,
          "description": "Field type (Text, Number, Date, etc.)"
        },
        "settings": {
          "type": "object",
          "required": false,
          "description": "Field settings object"
        }
      }
    }
  ]
}
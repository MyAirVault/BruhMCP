{
  "name": "gorgias",
  "displayName": "Gorgias",
  "description": "Gorgias is a helpdesk and live chat platform specializing in e-commerce, offering automated support, order management, and unified customer communication. A comprehensive customer service solution for online businesses.",
  "category": "crm",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/gorgias.svg",
  "port": 49311  ,
  "api": {
    "baseURL": "https://{subdomain}.gorgias.com",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/gorgias"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Gorgias OAuth2 Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Gorgias OAuth2 Client Secret"
      },
      {
        "name": "subdomain",
        "type": "text",
        "required": true,
        "description": "Gorgias account subdomain"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["read", "write"],
      "authorization_url": "https://{subdomain}.gorgias.com/oauth/authorize",
      "token_url": "https://{subdomain}.gorgias.com/oauth/token"
    }
  },
  "tools": [
    {
      "name": "list_teams",
      "description": "List all teams in Gorgias",
      "endpoint": "/api/teams",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of teams to return"
        },
        "cursor": {
          "type": "string",
          "required": false,
          "description": "Cursor for pagination"
        }
      }
    },
    {
      "name": "add_ticket_tags",
      "description": "Add tags to a ticket in Gorgias",
      "endpoint": "/api/tickets/{ticketId}/tags",
      "method": "POST",
      "parameters": {
        "ticketId": {
          "type": "string",
          "required": true,
          "description": "Ticket ID to add tags to"
        },
        "tags": {
          "type": "array",
          "required": true,
          "description": "Array of tag names to add"
        }
      }
    },
    {
      "name": "create_account_setting",
      "description": "Create account setting in Gorgias",
      "endpoint": "/api/account/settings",
      "method": "POST",
      "parameters": {
        "key": {
          "type": "string",
          "required": true,
          "description": "Setting key"
        },
        "value": {
          "type": "string",
          "required": true,
          "description": "Setting value"
        }
      }
    },
    {
      "name": "create_customer",
      "description": "Create a new customer in Gorgias",
      "endpoint": "/api/customers",
      "method": "POST",
      "parameters": {
        "email": {
          "type": "string",
          "required": true,
          "description": "Customer email address"
        },
        "name": {
          "type": "string",
          "required": false,
          "description": "Customer name"
        },
        "firstname": {
          "type": "string",
          "required": false,
          "description": "Customer first name"
        },
        "lastname": {
          "type": "string",
          "required": false,
          "description": "Customer last name"
        },
        "phone": {
          "type": "string",
          "required": false,
          "description": "Customer phone number"
        }
      }
    },
    {
      "name": "create_team",
      "description": "Create a new team in Gorgias",
      "endpoint": "/api/teams",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Team name"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Team description"
        }
      }
    },
    {
      "name": "create_ticket",
      "description": "Create a new ticket in Gorgias",
      "endpoint": "/api/tickets",
      "method": "POST",
      "parameters": {
        "subject": {
          "type": "string",
          "required": true,
          "description": "Ticket subject"
        },
        "customer": {
          "type": "object",
          "required": true,
          "description": "Customer information object"
        },
        "messages": {
          "type": "array",
          "required": true,
          "description": "Array of message objects"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "Ticket status (open, closed, etc.)"
        },
        "priority": {
          "type": "string",
          "required": false,
          "description": "Ticket priority (low, medium, high, urgent)"
        }
      }
    },
    {
      "name": "delete_customer",
      "description": "Delete a customer in Gorgias",
      "endpoint": "/api/customers/{customerId}",
      "method": "DELETE",
      "parameters": {
        "customerId": {
          "type": "string",
          "required": true,
          "description": "Customer ID to delete"
        }
      }
    },
    {
      "name": "get_account",
      "description": "Get account information from Gorgias",
      "endpoint": "/api/account",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "get_customer",
      "description": "Get a specific customer from Gorgias",
      "endpoint": "/api/customers/{customerId}",
      "method": "GET",
      "parameters": {
        "customerId": {
          "type": "string",
          "required": true,
          "description": "Customer ID to retrieve"
        }
      }
    },
    {
      "name": "get_team",
      "description": "Get a specific team from Gorgias",
      "endpoint": "/api/teams/{teamId}",
      "method": "GET",
      "parameters": {
        "teamId": {
          "type": "string",
          "required": true,
          "description": "Team ID to retrieve"
        }
      }
    },
    {
      "name": "get_ticket",
      "description": "Get a specific ticket from Gorgias",
      "endpoint": "/api/tickets/{ticketId}",
      "method": "GET",
      "parameters": {
        "ticketId": {
          "type": "string",
          "required": true,
          "description": "Ticket ID to retrieve"
        }
      }
    },
    {
      "name": "list_customers",
      "description": "List customers in Gorgias",
      "endpoint": "/api/customers",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of customers to return"
        },
        "cursor": {
          "type": "string",
          "required": false,
          "description": "Cursor for pagination"
        },
        "email": {
          "type": "string",
          "required": false,
          "description": "Filter by customer email"
        }
      }
    }
  ]
}
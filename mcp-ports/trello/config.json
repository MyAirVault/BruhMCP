{
  "name": "trello",
  "displayName": "Trello",
  "description": "Trello is a web-based, kanban-style, list-making application for project management and organization",
  "category": "productivity",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/trello.svg",
  "port": 49494  ,
  "api": {
    "baseURL": "https://api.composio.dev",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/trello"
  },
  "auth": {
    "type": "oauth1",
    "fields": [
      {
        "name": "consumer_key",
        "type": "text",
        "required": true,
        "description": "Trello Consumer Key"
      },
      {
        "name": "consumer_secret",
        "type": "password",
        "required": true,
        "description": "Trello Consumer Secret"
      },
      {
        "name": "token",
        "type": "password",
        "required": false,
        "description": "Trello Bearer Token (alternative to OAuth1)"
      }
    ]
  },
  "tools": [
    {
      "name": "add_board",
      "description": "Add a new board",
      "endpoint": "/tools/trello/add_board",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Board name"
        },
        "desc": {
          "type": "string",
          "required": false,
          "description": "Board description"
        }
      }
    },
    {
      "name": "add_card",
      "description": "Add a new card",
      "endpoint": "/tools/trello/add_card",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Card name"
        },
        "list_id": {
          "type": "string",
          "required": true,
          "description": "List ID to add card to"
        },
        "desc": {
          "type": "string",
          "required": false,
          "description": "Card description"
        }
      }
    },
    {
      "name": "add_list_to_board",
      "description": "Add a new list to board",
      "endpoint": "/tools/trello/add_list_to_board",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "List name"
        },
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID to add list to"
        }
      }
    },
    {
      "name": "delete_card",
      "description": "Delete card by ID",
      "endpoint": "/tools/trello/delete_card",
      "method": "DELETE",
      "parameters": {
        "card_id": {
          "type": "string",
          "required": true,
          "description": "Card ID to delete"
        }
      }
    },
    {
      "name": "get_board_details",
      "description": "Get board details",
      "endpoint": "/tools/trello/get_board_details",
      "method": "GET",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID to get details for"
        }
      }
    },
    {
      "name": "get_cards_by_board_id",
      "description": "Get cards by board ID",
      "endpoint": "/tools/trello/get_cards_by_board_id",
      "method": "GET",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID to get cards from"
        }
      }
    },
    {
      "name": "add_comment_to_card",
      "description": "Add comment to card",
      "endpoint": "/tools/trello/add_comment_to_card",
      "method": "POST",
      "parameters": {
        "card_id": {
          "type": "string",
          "required": true,
          "description": "Card ID to comment on"
        },
        "text": {
          "type": "string",
          "required": true,
          "description": "Comment text"
        }
      }
    }
  ]
}
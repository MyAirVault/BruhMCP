{
  "name": "apollo",
  "displayName": "Apollo",
  "description": "Apollo provides CRM and lead generation capabilities, helping businesses discover contacts, manage outreach, and track sales pipelines. A comprehensive platform for sales intelligence and engagement.",
  "category": "crm",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/apollo.svg",
  "port": 49181    ,
  "api": {
    "baseURL": "https://api.apollo.io",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/apollo"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "Apollo API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "add_contacts_to_sequence",
      "description": "Add contacts to a sequence in Apollo",
      "endpoint": "/sequences/contacts",
      "method": "POST",
      "parameters": {
        "sequence_id": {
          "type": "string",
          "required": true,
          "description": "ID of the sequence to add contacts to"
        },
        "contact_ids": {
          "type": "array",
          "required": true,
          "description": "Array of contact IDs to add to sequence"
        }
      }
    },
    {
      "name": "bulk_organization_enrichment",
      "description": "Bulk organization enrichment in Apollo",
      "endpoint": "/organizations/enrich/bulk",
      "method": "POST",
      "parameters": {
        "organizations": {
          "type": "array",
          "required": true,
          "description": "Array of organization data to enrich"
        }
      }
    },
    {
      "name": "bulk_people_enrichment",
      "description": "Bulk people enrichment in Apollo",
      "endpoint": "/people/enrich/bulk",
      "method": "POST",
      "parameters": {
        "people": {
          "type": "array",
          "required": true,
          "description": "Array of people data to enrich"
        }
      }
    },
    {
      "name": "bulk_update_account_stage",
      "description": "Bulk update account stage in Apollo",
      "endpoint": "/accounts/stage/bulk",
      "method": "PUT",
      "parameters": {
        "account_ids": {
          "type": "array",
          "required": true,
          "description": "Array of account IDs to update"
        },
        "stage": {
          "type": "string",
          "required": true,
          "description": "New stage for the accounts"
        }
      }
    },
    {
      "name": "create_apollo_account",
      "description": "Create a new Apollo account",
      "endpoint": "/accounts",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Account name"
        },
        "domain": {
          "type": "string",
          "required": false,
          "description": "Account domain"
        },
        "industry": {
          "type": "string",
          "required": false,
          "description": "Account industry"
        },
        "phone": {
          "type": "string",
          "required": false,
          "description": "Account phone number"
        }
      }
    },
    {
      "name": "create_apollo_contact",
      "description": "Create a new Apollo contact",
      "endpoint": "/contacts",
      "method": "POST",
      "parameters": {
        "first_name": {
          "type": "string",
          "required": true,
          "description": "Contact first name"
        },
        "last_name": {
          "type": "string",
          "required": true,
          "description": "Contact last name"
        },
        "email": {
          "type": "string",
          "required": false,
          "description": "Contact email address"
        },
        "title": {
          "type": "string",
          "required": false,
          "description": "Contact job title"
        },
        "account_id": {
          "type": "string",
          "required": false,
          "description": "Associated account ID"
        }
      }
    },
    {
      "name": "create_apollo_deal",
      "description": "Create a new Apollo deal",
      "endpoint": "/deals",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Deal name"
        },
        "amount": {
          "type": "number",
          "required": false,
          "description": "Deal amount"
        },
        "stage": {
          "type": "string",
          "required": false,
          "description": "Deal stage"
        },
        "account_id": {
          "type": "string",
          "required": false,
          "description": "Associated account ID"
        },
        "close_date": {
          "type": "string",
          "required": false,
          "description": "Expected close date"
        }
      }
    },
    {
      "name": "create_apollo_task",
      "description": "Create a new Apollo task",
      "endpoint": "/tasks",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Task title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Task description"
        },
        "due_date": {
          "type": "string",
          "required": false,
          "description": "Task due date"
        },
        "contact_id": {
          "type": "string",
          "required": false,
          "description": "Associated contact ID"
        }
      }
    },
    {
      "name": "people_search",
      "description": "Search for people in Apollo",
      "endpoint": "/people/search",
      "method": "GET",
      "parameters": {
        "q": {
          "type": "string",
          "required": false,
          "description": "Search query"
        },
        "person_titles": {
          "type": "array",
          "required": false,
          "description": "Array of job titles to filter by"
        },
        "organization_names": {
          "type": "array",
          "required": false,
          "description": "Array of organization names to filter by"
        },
        "page": {
          "type": "number",
          "required": false,
          "description": "Page number for pagination"
        }
      }
    },
    {
      "name": "search_sequences",
      "description": "Search sequences in Apollo",
      "endpoint": "/sequences/search",
      "method": "GET",
      "parameters": {
        "q": {
          "type": "string",
          "required": false,
          "description": "Search query for sequences"
        },
        "page": {
          "type": "number",
          "required": false,
          "description": "Page number for pagination"
        }
      }
    },
    {
      "name": "search_tasks",
      "description": "Search tasks in Apollo",
      "endpoint": "/tasks/search",
      "method": "GET",
      "parameters": {
        "q": {
          "type": "string",
          "required": false,
          "description": "Search query for tasks"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "Task status filter"
        },
        "page": {
          "type": "number",
          "required": false,
          "description": "Page number for pagination"
        }
      }
    },
    {
      "name": "update_contact_ownership",
      "description": "Update contact ownership in Apollo",
      "endpoint": "/contacts/{contactId}/ownership",
      "method": "PUT",
      "parameters": {
        "contactId": {
          "type": "string",
          "required": true,
          "description": "Contact ID to update ownership for"
        },
        "owner_id": {
          "type": "string",
          "required": true,
          "description": "New owner ID"
        }
      }
    },
    {
      "name": "update_contact_stage",
      "description": "Update contact stage in Apollo",
      "endpoint": "/contacts/{contactId}/stage",
      "method": "PUT",
      "parameters": {
        "contactId": {
          "type": "string",
          "required": true,
          "description": "Contact ID to update stage for"
        },
        "stage": {
          "type": "string",
          "required": true,
          "description": "New stage for the contact"
        }
      }
    }
  ]
}
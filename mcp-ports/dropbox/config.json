{
  "name": "dropbox",
  "displayName": "Dropbox",
  "description": "Cloud storage service offering file syncing, sharing, and collaboration across devices with version control",
  "category": "storage",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/dropbox.svg",
  "port": 49264  ,
  "api": {
    "baseURL": "https://api.dropboxapi.com",
    "version": "2",
    "documentation": "https://www.dropbox.com/developers/documentation/http/documentation"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Dropbox OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Dropbox OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["account_info.read", "files.metadata.write", "files.content.write", "sharing.write"],
      "authorization_url": "https://www.dropbox.com/oauth2/authorize",
      "token_url": "https://api.dropboxapi.com/oauth2/token"
    }
  },
  "tools": [
    {
      "name": "create_file_request",
      "description": "Generate upload link for a Dropbox folder",
      "endpoint": "/2/file_requests/create",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Title for the file request"
        },
        "destination": {
          "type": "string",
          "required": true,
          "description": "Dropbox folder path where files will be uploaded"
        }
      }
    },
    {
      "name": "create_folder",
      "description": "Make new directory in Dropbox",
      "endpoint": "/2/files/create_folder_v2",
      "method": "POST",
      "parameters": {
        "path": {
          "type": "string",
          "required": true,
          "description": "Path for the new folder"
        },
        "autorename": {
          "type": "boolean",
          "required": false,
          "description": "Auto-rename if folder already exists"
        }
      }
    },
    {
      "name": "move_file",
      "description": "Relocate files or folders",
      "endpoint": "/2/files/move_v2",
      "method": "POST",
      "parameters": {
        "from_path": {
          "type": "string",
          "required": true,
          "description": "Source path of the file/folder"
        },
        "to_path": {
          "type": "string",
          "required": true,
          "description": "Destination path for the file/folder"
        }
      }
    },
    {
      "name": "search_files",
      "description": "Find items by name or content",
      "endpoint": "/2/files/search_v2",
      "method": "POST",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search query string"
        },
        "options": {
          "type": "object",
          "required": false,
          "description": "Search options and filters"
        }
      }
    },
    {
      "name": "delete_file",
      "description": "Permanently remove files or folders",
      "endpoint": "/2/files/delete_v2",
      "method": "POST",
      "parameters": {
        "path": {
          "type": "string",
          "required": true,
          "description": "Path of the file/folder to delete"
        }
      }
    },
    {
      "name": "list_folder",
      "description": "View directory contents",
      "endpoint": "/2/files/list_folder",
      "method": "POST",
      "parameters": {
        "path": {
          "type": "string",
          "required": true,
          "description": "Path of the folder to list"
        },
        "recursive": {
          "type": "boolean",
          "required": false,
          "description": "List contents recursively"
        }
      }
    },
    {
      "name": "upload_file",
      "description": "Add new files to Dropbox",
      "endpoint": "/2/files/upload",
      "method": "POST",
      "parameters": {
        "path": {
          "type": "string",
          "required": true,
          "description": "Destination path for the uploaded file"
        },
        "mode": {
          "type": "string",
          "required": false,
          "description": "Upload mode (add, overwrite, update)"
        }
      }
    }
  ]
}
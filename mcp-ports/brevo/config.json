{
  "name": "brevo",
  "displayName": "Brevo",
  "description": "All-in-one email and SMS marketing platform that provides transactional messaging, marketing automation, contact management, and CRM tools (formerly Sendinblue)",
  "category": "email",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/sendinblue.svg",
  "port": 49213   ,
  "api": {
    "baseURL": "https://api.brevo.com/v3",
    "version": "3.0",
    "documentation": "https://v3.docs.composio.dev/tools/brevo"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Brevo OAuth Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Brevo OAuth Client Secret"
      },
      {
        "name": "api_key",
        "type": "password",
        "required": false,
        "description": "Brevo API Key (alternative to OAuth)"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": [],
      "authorization_url": "https://account.brevo.com/oauth2/authorize",
      "token_url": "https://account.brevo.com/oauth2/token"
    }
  },
  "tools": [
    {
      "name": "create_email_template",
      "description": "Create a new email template",
      "endpoint": "/smtp/templates",
      "method": "POST",
      "parameters": {
        "templateName": {
          "type": "string",
          "required": true,
          "description": "Name of the email template"
        },
        "subject": {
          "type": "string",
          "required": true,
          "description": "Subject of the email template"
        },
        "htmlContent": {
          "type": "string",
          "required": false,
          "description": "HTML content of the email"
        },
        "sender": {
          "type": "object",
          "required": true,
          "description": "Sender information including name and email"
        }
      }
    },
    {
      "name": "update_email_template",
      "description": "Update an existing email template",
      "endpoint": "/smtp/templates/{templateId}",
      "method": "PUT",
      "parameters": {
        "templateId": {
          "type": "string",
          "required": true,
          "description": "ID of the template to update"
        },
        "templateName": {
          "type": "string",
          "required": false,
          "description": "Updated name of the email template"
        },
        "subject": {
          "type": "string",
          "required": false,
          "description": "Updated subject of the email template"
        },
        "htmlContent": {
          "type": "string",
          "required": false,
          "description": "Updated HTML content of the email"
        }
      }
    },
    {
      "name": "create_sms_campaign",
      "description": "Create a new SMS campaign",
      "endpoint": "/smsTemplates",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Name of the SMS campaign"
        },
        "content": {
          "type": "string",
          "required": true,
          "description": "Content of the SMS message"
        }
      }
    },
    {
      "name": "manage_contacts",
      "description": "Create or update contacts",
      "endpoint": "/contacts",
      "method": "POST",
      "parameters": {
        "email": {
          "type": "string",
          "required": true,
          "description": "Email address of the contact"
        },
        "attributes": {
          "type": "object",
          "required": false,
          "description": "Contact attributes"
        },
        "listIds": {
          "type": "array",
          "required": false,
          "description": "List IDs to add the contact to"
        }
      }
    },
    {
      "name": "get_account_info",
      "description": "Get account information",
      "endpoint": "/account",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "list_email_campaigns",
      "description": "Get all email campaigns",
      "endpoint": "/emailCampaigns",
      "method": "GET",
      "parameters": {
        "type": {
          "type": "string",
          "required": false,
          "description": "Type of campaign to filter"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "Status of campaigns to filter"
        }
      }
    },
    {
      "name": "delete_campaign",
      "description": "Delete an email campaign",
      "endpoint": "/emailCampaigns/{campaignId}",
      "method": "DELETE",
      "parameters": {
        "campaignId": {
          "type": "string",
          "required": true,
          "description": "ID of the campaign to delete"
        }
      }
    },
    {
      "name": "get_sender_info",
      "description": "Retrieve sender information",
      "endpoint": "/senders",
      "method": "GET",
      "parameters": {}
    }
  ]
}
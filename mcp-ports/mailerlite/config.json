{
  "name": "mailerlite",
  "displayName": "MailerLite",
  "description": "Email marketing service that offers tools for creating and managing email campaigns, automating workflows, building landing pages, and e-commerce integration",
  "category": "email",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/mailerlite.svg",
  "port": 49357  ,
  "api": {
    "baseURL": "https://connect.mailerlite.com/api",
    "version": "1.0",
    "documentation": "https://v3.docs.composio.dev/tools/mailerlite"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "MailerLite API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "create_ecommerce_customer",
      "description": "Create a new e-commerce customer",
      "endpoint": "/ecommerce/customers",
      "method": "POST",
      "parameters": {
        "email": {
          "type": "string",
          "required": true,
          "description": "Customer email address"
        },
        "first_name": {
          "type": "string",
          "required": false,
          "description": "Customer first name"
        },
        "last_name": {
          "type": "string",
          "required": false,
          "description": "Customer last name"
        },
        "accepts_marketing": {
          "type": "boolean",
          "required": false,
          "description": "Whether customer accepts marketing",
          "default": true
        }
      }
    },
    {
      "name": "update_ecommerce_customer",
      "description": "Update an existing e-commerce customer",
      "endpoint": "/ecommerce/customers/{customer_id}",
      "method": "PUT",
      "parameters": {
        "customer_id": {
          "type": "string",
          "required": true,
          "description": "ID of the customer to update"
        },
        "email": {
          "type": "string",
          "required": false,
          "description": "Updated customer email address"
        },
        "first_name": {
          "type": "string",
          "required": false,
          "description": "Updated customer first name"
        },
        "last_name": {
          "type": "string",
          "required": false,
          "description": "Updated customer last name"
        }
      }
    },
    {
      "name": "create_ecommerce_shop",
      "description": "Create a new e-commerce shop",
      "endpoint": "/ecommerce/shops",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Shop name"
        },
        "url": {
          "type": "string",
          "required": true,
          "description": "Shop URL"
        },
        "currency": {
          "type": "string",
          "required": true,
          "description": "Shop currency code (e.g., USD, EUR)"
        }
      }
    },
    {
      "name": "delete_ecommerce_customer",
      "description": "Delete an e-commerce customer",
      "endpoint": "/ecommerce/customers/{customer_id}",
      "method": "DELETE",
      "parameters": {
        "customer_id": {
          "type": "string",
          "required": true,
          "description": "ID of the customer to delete"
        }
      }
    },
    {
      "name": "delete_ecommerce_shop",
      "description": "Delete an e-commerce shop",
      "endpoint": "/ecommerce/shops/{shop_id}",
      "method": "DELETE",
      "parameters": {
        "shop_id": {
          "type": "string",
          "required": true,
          "description": "ID of the shop to delete"
        }
      }
    },
    {
      "name": "create_field",
      "description": "Create a custom field for subscribers",
      "endpoint": "/fields",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Field name"
        },
        "type": {
          "type": "string",
          "required": true,
          "description": "Field type (text, number, date, boolean)"
        }
      }
    },
    {
      "name": "create_group",
      "description": "Create a new subscriber group",
      "endpoint": "/groups",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Group name"
        }
      }
    },
    {
      "name": "create_segment",
      "description": "Create a new subscriber segment",
      "endpoint": "/segments",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Segment name"
        },
        "filter": {
          "type": "object",
          "required": true,
          "description": "Segment filter criteria"
        }
      }
    },
    {
      "name": "delete_subscriber",
      "description": "Delete a subscriber",
      "endpoint": "/subscribers/{subscriber_id}",
      "method": "DELETE",
      "parameters": {
        "subscriber_id": {
          "type": "string",
          "required": true,
          "description": "ID of the subscriber to delete"
        }
      }
    },
    {
      "name": "create_webhook",
      "description": "Create a webhook",
      "endpoint": "/webhooks",
      "method": "POST",
      "parameters": {
        "url": {
          "type": "string",
          "required": true,
          "description": "Webhook URL"
        },
        "events": {
          "type": "array",
          "required": true,
          "description": "List of events to subscribe to"
        }
      }
    },
    {
      "name": "delete_webhook",
      "description": "Delete a webhook",
      "endpoint": "/webhooks/{webhook_id}",
      "method": "DELETE",
      "parameters": {
        "webhook_id": {
          "type": "string",
          "required": true,
          "description": "ID of the webhook to delete"
        }
      }
    },
    {
      "name": "get_account_info",
      "description": "Get account information",
      "endpoint": "/me",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "get_account_stats",
      "description": "Get account statistics",
      "endpoint": "/stats",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "get_campaigns",
      "description": "Get all campaigns",
      "endpoint": "/campaigns",
      "method": "GET",
      "parameters": {
        "filter[status]": {
          "type": "string",
          "required": false,
          "description": "Filter by campaign status"
        },
        "page": {
          "type": "number",
          "required": false,
          "description": "Page number for pagination",
          "default": 1
        }
      }
    },
    {
      "name": "get_ecommerce_customers_count",
      "description": "Get total count of e-commerce customers",
      "endpoint": "/ecommerce/customers/count",
      "method": "GET",
      "parameters": {}
    }
  ]
}
{
  "name": "timely",
  "displayName": "Timely",
  "description": "Timely is an automatic time-tracking platform capturing activity across applications, calendars, and devices",
  "category": "productivity",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/timely.svg",
  "port": 49487  ,
  "api": {
    "baseURL": "https://api.composio.dev",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/timely"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Timely OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Timely OAuth App Client Secret"
      },
      {
        "name": "subdomain",
        "type": "text",
        "required": true,
        "description": "Timely subdomain"
      },
      {
        "name": "bearer_token",
        "type": "password",
        "required": false,
        "description": "Timely Bearer Token (alternative to OAuth)"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["default"],
      "authorization_url": "https://api.timelyapp.com/1.1/oauth/authorize",
      "token_url": "https://api.timelyapp.com/1.1/oauth/token"
    }
  },
  "tools": [
    {
      "name": "create_webhook",
      "description": "Create a new webhook for a specified account",
      "endpoint": "/tools/timely/create_webhook",
      "method": "POST",
      "parameters": {
        "account_id": {
          "type": "string",
          "required": true,
          "description": "Account ID"
        },
        "url": {
          "type": "string",
          "required": true,
          "description": "Webhook URL"
        },
        "events": {
          "type": "array",
          "required": true,
          "description": "Array of events to listen for"
        }
      }
    },
    {
      "name": "retrieve_account",
      "description": "Retrieve details of a specific account by its ID",
      "endpoint": "/tools/timely/retrieve_account",
      "method": "GET",
      "parameters": {
        "account_id": {
          "type": "string",
          "required": true,
          "description": "Account ID to retrieve"
        }
      }
    }
  ]
}
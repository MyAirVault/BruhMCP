{
  "name": "datadog",
  "displayName": "Datadog",
  "description": "Datadog offers monitoring, observability, and security for cloud-scale applications, unifying metrics, logs, and traces",
  "category": "monitoring",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/datadog.svg",
  "port": 49253  ,
  "api": {
    "baseURL": "https://api.datadoghq.com",
    "version": "v1",
    "documentation": "https://docs.datadoghq.com/api/"
  },
  "auth": {
    "type": "apikey",
    "fields": [
      {
        "name": "region",
        "type": "text",
        "required": true,
        "description": "Datadog region (us1, us3, us5, eu1, ap1, gov)"
      },
      {
        "name": "generic_api_key",
        "type": "password",
        "required": true,
        "description": "Datadog API key"
      },
      {
        "name": "generic_id",
        "type": "text",
        "required": true,
        "description": "Datadog Application key"
      }
    ]
  },
  "tools": [
    {
      "name": "create_dashboard",
      "description": "Create a new dashboard",
      "endpoint": "/api/v1/dashboard",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Dashboard title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Dashboard description"
        },
        "widgets": {
          "type": "array",
          "required": true,
          "description": "Array of widget configurations"
        },
        "layout_type": {
          "type": "string",
          "required": true,
          "description": "Dashboard layout type (ordered, free)"
        },
        "is_read_only": {
          "type": "boolean",
          "required": false,
          "description": "Whether dashboard is read-only"
        }
      }
    },
    {
      "name": "get_dashboard",
      "description": "Get dashboard details",
      "endpoint": "/api/v1/dashboard/{dashboard_id}",
      "method": "GET",
      "parameters": {
        "dashboard_id": {
          "type": "string",
          "required": true,
          "description": "Dashboard ID"
        }
      }
    },
    {
      "name": "delete_dashboard",
      "description": "Delete a dashboard",
      "endpoint": "/api/v1/dashboard/{dashboard_id}",
      "method": "DELETE",
      "parameters": {
        "dashboard_id": {
          "type": "string",
          "required": true,
          "description": "Dashboard ID to delete"
        }
      }
    },
    {
      "name": "create_monitor",
      "description": "Create a new monitor",
      "endpoint": "/api/v1/monitor",
      "method": "POST",
      "parameters": {
        "type": {
          "type": "string",
          "required": true,
          "description": "Monitor type (metric alert, service check, etc.)"
        },
        "query": {
          "type": "string",
          "required": true,
          "description": "Monitor query"
        },
        "name": {
          "type": "string",
          "required": true,
          "description": "Monitor name"
        },
        "message": {
          "type": "string",
          "required": false,
          "description": "Monitor message/notification"
        },
        "tags": {
          "type": "array",
          "required": false,
          "description": "Array of monitor tags"
        },
        "options": {
          "type": "object",
          "required": false,
          "description": "Monitor options and thresholds"
        }
      }
    },
    {
      "name": "list_monitors",
      "description": "List all monitors",
      "endpoint": "/api/v1/monitor",
      "method": "GET",
      "parameters": {
        "group_states": {
          "type": "array",
          "required": false,
          "description": "Filter by monitor states"
        },
        "name": {
          "type": "string",
          "required": false,
          "description": "Filter by monitor name"
        },
        "tags": {
          "type": "array",
          "required": false,
          "description": "Filter by tags"
        }
      }
    },
    {
      "name": "create_downtime",
      "description": "Create a downtime period",
      "endpoint": "/api/v1/downtime",
      "method": "POST",
      "parameters": {
        "scope": {
          "type": "array",
          "required": true,
          "description": "Array of scopes to apply downtime to"
        },
        "start": {
          "type": "number",
          "required": false,
          "description": "Start time (Unix timestamp)"
        },
        "end": {
          "type": "number",
          "required": false,
          "description": "End time (Unix timestamp)"
        },
        "message": {
          "type": "string",
          "required": false,
          "description": "Downtime message"
        },
        "recurrence": {
          "type": "object",
          "required": false,
          "description": "Recurring downtime configuration"
        }
      }
    },
    {
      "name": "create_slo",
      "description": "Create a Service Level Objective",
      "endpoint": "/api/v1/slo",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "SLO name"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "SLO description"
        },
        "type": {
          "type": "string",
          "required": true,
          "description": "SLO type (metric, monitor)"
        },
        "thresholds": {
          "type": "array",
          "required": true,
          "description": "Array of SLO thresholds"
        },
        "query": {
          "type": "object",
          "required": true,
          "description": "SLO query configuration"
        }
      }
    },
    {
      "name": "list_host_tags",
      "description": "List host tags",
      "endpoint": "/api/v1/tags/hosts",
      "method": "GET",
      "parameters": {
        "source": {
          "type": "string",
          "required": false,
          "description": "Source to filter by"
        }
      }
    }
  ]
}
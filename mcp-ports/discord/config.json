{
  "name": "discord",
  "displayName": "Discord",
  "description": "Discord is an instant messaging and VoIP social platform for communities and communication",
  "category": "communication",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/discord.svg",
  "port": 49260,
  "api": {
    "baseURL": "https://discord.com/api",
    "version": "v10",
    "documentation": "https://discord.com/developers/docs/intro"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Discord OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Discord OAuth App Client Secret"
      },
      {
        "name": "bearer_token",
        "type": "password",
        "required": false,
        "description": "Discord Bearer Token (alternative to OAuth)"
      },
      {
        "name": "bot_token",
        "type": "password",
        "required": false,
        "description": "Discord Bot Token (for bot-specific operations)"
      }
    ],
    "oauth": {
      "redirect_uri": "http://localhost:3000/auth/discord/callback",
      "scopes": ["identify", "email", "connections", "guilds", "guilds.members.read", "messages.read", "bot"],
      "authorization_url": "https://discord.com/api/oauth2/authorize",
      "token_url": "https://discord.com/api/oauth2/token"
    }
  }
}
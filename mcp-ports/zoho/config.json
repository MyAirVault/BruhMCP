{
  "name": "zoho",
  "displayName": "Zoho CRM",
  "description": "Comprehensive cloud-based CRM solution offering sales automation, marketing tools, customer support, and analytics for businesses of all sizes",
  "category": "crm",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/zoho.svg",
  "port": 49524  ,
  "api": {
    "baseURL": "https://www.zohoapis.com/crm",
    "version": "v2",
    "documentation": "https://www.zoho.com/crm/developer/docs/"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Zoho CRM OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Zoho CRM OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": [
        "ZohoCRM.modules.ALL",
        "ZohoCRM.users.ALL",
        "ZohoCRM.org.ALL"
      ],
      "authorization_url": "https://accounts.zoho.com/oauth/v2/auth",
      "token_url": "https://accounts.zoho.com/oauth/v2/token"
    }
  },
  "tools": [
    {
      "name": "convert_lead",
      "description": "Convert lead to contact/account/deal",
      "endpoint": "/v2/Leads/{lead_id}/actions/convert",
      "method": "POST",
      "parameters": {
        "lead_id": {
          "type": "string",
          "required": true,
          "description": "Lead ID to convert"
        },
        "data": {
          "type": "object",
          "required": true,
          "description": "Conversion data including account, contact, and deal information"
        }
      }
    },
    {
      "name": "create_record",
      "description": "Creates new records in a specified module",
      "endpoint": "/v2/{module}",
      "method": "POST",
      "parameters": {
        "module": {
          "type": "string",
          "required": true,
          "description": "Module name (Leads, Contacts, Accounts, Deals, etc.)"
        },
        "data": {
          "type": "array",
          "required": true,
          "description": "Array of record objects to create"
        }
      }
    },
    {
      "name": "create_tag",
      "description": "Creates new tags in Zoho CRM",
      "endpoint": "/v2/settings/tags",
      "method": "POST",
      "parameters": {
        "tags": {
          "type": "array",
          "required": true,
          "description": "Array of tag objects to create"
        }
      }
    },
    {
      "name": "get_records",
      "description": "Retrieves records from a specified module",
      "endpoint": "/v2/{module}",
      "method": "GET",
      "parameters": {
        "module": {
          "type": "string",
          "required": true,
          "description": "Module name (Leads, Contacts, Accounts, Deals, etc.)"
        },
        "page": {
          "type": "number",
          "required": false,
          "description": "Page number"
        },
        "per_page": {
          "type": "number",
          "required": false,
          "description": "Number of records per page",
          "default": 200
        },
        "fields": {
          "type": "string",
          "required": false,
          "description": "Comma-separated list of fields to retrieve"
        }
      }
    },
    {
      "name": "update_related_records",
      "description": "Associates/updates relationships between records",
      "endpoint": "/v2/{module}/{record_id}/{related_module}",
      "method": "PUT",
      "parameters": {
        "module": {
          "type": "string",
          "required": true,
          "description": "Primary module name"
        },
        "record_id": {
          "type": "string",
          "required": true,
          "description": "Primary record ID"
        },
        "related_module": {
          "type": "string",
          "required": true,
          "description": "Related module name"
        },
        "data": {
          "type": "array",
          "required": true,
          "description": "Array of related record IDs"
        }
      }
    },
    {
      "name": "update_record",
      "description": "Updates existing records in a specified module",
      "endpoint": "/v2/{module}/{record_id}",
      "method": "PUT",
      "parameters": {
        "module": {
          "type": "string",
          "required": true,
          "description": "Module name"
        },
        "record_id": {
          "type": "string",
          "required": true,
          "description": "Record ID to update"
        },
        "data": {
          "type": "array",
          "required": true,
          "description": "Array of record objects with updated data"
        }
      }
    },
    {
      "name": "get_record",
      "description": "Get a specific record by ID",
      "endpoint": "/v2/{module}/{record_id}",
      "method": "GET",
      "parameters": {
        "module": {
          "type": "string",
          "required": true,
          "description": "Module name"
        },
        "record_id": {
          "type": "string",
          "required": true,
          "description": "Record ID"
        }
      }
    },
    {
      "name": "delete_record",
      "description": "Delete a specific record",
      "endpoint": "/v2/{module}/{record_id}",
      "method": "DELETE",
      "parameters": {
        "module": {
          "type": "string",
          "required": true,
          "description": "Module name"
        },
        "record_id": {
          "type": "string",
          "required": true,
          "description": "Record ID to delete"
        }
      }
    },
    {
      "name": "search_records",
      "description": "Search records in a module",
      "endpoint": "/v2/{module}/search",
      "method": "GET",
      "parameters": {
        "module": {
          "type": "string",
          "required": true,
          "description": "Module name"
        },
        "criteria": {
          "type": "string",
          "required": true,
          "description": "Search criteria"
        }
      }
    }
  ]
}
{
  "name": "contentful",
  "displayName": "Contentful",
  "description": "Contentful is a headless CMS allowing developers to create, manage, and distribute content across multiple channels and devices with an API-first approach",
  "category": "developer",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/contentful.svg",
  "port": 49247  ,
  "api": {
    "baseURL": "https://api.contentful.com",
    "version": "v1",
    "documentation": "https://www.contentful.com/developers/docs/"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Contentful OAuth Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Contentful OAuth Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["content_management_manage"],
      "authorization_url": "https://be.contentful.com/oauth/authorize",
      "token_url": "https://be.contentful.com/oauth/token"
    }
  },
  "tools": [
    {
      "name": "get_space",
      "description": "Retrieves details of a specific space by its id",
      "endpoint": "/spaces/{space_id}",
      "method": "GET",
      "parameters": {
        "space_id": {
          "type": "string",
          "required": true,
          "description": "Space ID"
        }
      }
    },
    {
      "name": "list_spaces",
      "description": "Lists all spaces that the authenticated user has access to",
      "endpoint": "/spaces",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of spaces to retrieve"
        },
        "order": {
          "type": "string",
          "required": false,
          "description": "Order of results"
        },
        "skip": {
          "type": "number",
          "required": false,
          "description": "Number of spaces to skip"
        }
      }
    },
    {
      "name": "update_space",
      "description": "Updates the name of a specific space",
      "endpoint": "/spaces/{space_id}",
      "method": "PUT",
      "parameters": {
        "space_id": {
          "type": "string",
          "required": true,
          "description": "Space ID"
        },
        "name": {
          "type": "string",
          "required": true,
          "description": "New space name"
        },
        "version": {
          "type": "number",
          "required": true,
          "description": "Space version for optimistic locking"
        }
      }
    },
    {
      "name": "get_entries",
      "description": "Get entries from a space",
      "endpoint": "/spaces/{space_id}/entries",
      "method": "GET",
      "parameters": {
        "space_id": {
          "type": "string",
          "required": true,
          "description": "Space ID"
        },
        "content_type": {
          "type": "string",
          "required": false,
          "description": "Filter by content type"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of entries to retrieve"
        }
      }
    }
  ]
}
{
  "name": "dynamics365",
  "displayName": "Dynamics 365",
  "description": "Dynamics 365 from Microsoft combines CRM, ERP, and productivity apps to streamline sales, marketing, customer service, and operations. A comprehensive business applications platform.",
  "category": "crm",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/microsoftdynamics365.svg",
  "port": 49266  ,
  "api": {
    "baseURL": "https://{subdomain}.api.crm.dynamics.com",
    "version": "v9.2",
    "documentation": "https://v3.docs.composio.dev/tools/dynamics365"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Dynamics 365 OAuth2 Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Dynamics 365 OAuth2 Client Secret"
      },
      {
        "name": "subdomain",
        "type": "text",
        "required": true,
        "description": "Dynamics 365 organization subdomain"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["https://dynamics.microsoft.com/user_impersonation"],
      "authorization_url": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize",
      "token_url": "https://login.microsoftonline.com/common/oauth2/v2.0/token"
    }
  },
  "tools": [
    {
      "name": "create_account",
      "description": "Create a new account in Dynamics 365",
      "endpoint": "/api/data/v9.2/accounts",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Account name"
        },
        "telephone1": {
          "type": "string",
          "required": false,
          "description": "Main phone number"
        },
        "websiteurl": {
          "type": "string",
          "required": false,
          "description": "Website URL"
        },
        "industrycode": {
          "type": "number",
          "required": false,
          "description": "Industry code"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Account description"
        }
      }
    },
    {
      "name": "create_case",
      "description": "Create a new case in Dynamics 365",
      "endpoint": "/api/data/v9.2/incidents",
      "method": "POST",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Case title"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Case description"
        },
        "prioritycode": {
          "type": "number",
          "required": false,
          "description": "Priority code (1=High, 2=Normal, 3=Low)"

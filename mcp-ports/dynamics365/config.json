        "emailaddress1": {
          "type": "string",
          "required": false,
          "description": "Primary email address"
        },
        "telephone1": {
          "type": "string",
          "required": false,
          "description": "Business phone"
        },
        "jobtitle": {
          "type": "string",
          "required": false,
          "description": "Job title"

{
  "name": "docusign",
  "displayName": "DocuSign",
  "description": "DocuSign provides eSignature and digital agreement solutions, enabling businesses to send, sign, track, and manage documents electronically",
  "category": "storage",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/docusign.svg",
  "port": 49263  ,
  "api": {
    "baseURL": "https://account.docusign.com",
    "version": "v2.1",
    "documentation": "https://developers.docusign.com/docs/esign-rest-api/"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "DocuSign OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "DocuSign OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["signature", "impersonation"],
      "authorization_url": "https://account.docusign.com/oauth/auth",
      "token_url": "https://account.docusign.com/oauth/token"
    }
  },
  "tools": [
    {
      "name": "create_envelope_from_template",
      "description": "Create a new envelope from an existing template",
      "endpoint": "/restapi/v2.1/accounts/{accountId}/envelopes",
      "method": "POST",
      "parameters": {
        "accountId": {
          "type": "string",
          "required": true,
          "description": "Account ID"
        },
        "templateId": {
          "type": "string",
          "required": true,
          "description": "Template ID to use"
        },
        "emailSubject": {
          "type": "string",
          "required": true,
          "description": "Email subject for the envelope"
        }
      }
    },
    {
      "name": "send_envelope",
      "description": "Send an envelope for signature",
      "endpoint": "/restapi/v2.1/accounts/{accountId}/envelopes",
      "method": "POST",
      "parameters": {
        "accountId": {
          "type": "string",
          "required": true,
          "description": "Account ID"
        },
        "status": {
          "type": "string",
          "required": true,
          "description": "Envelope status (sent, draft)"
        },
        "emailSubject": {
          "type": "string",
          "required": true,
          "description": "Email subject for the envelope"
        }
      }
    },
    {
      "name": "get_envelope_details",
      "description": "Get details of a specific envelope",
      "endpoint": "/restapi/v2.1/accounts/{accountId}/envelopes/{envelopeId}",
      "method": "GET",
      "parameters": {
        "accountId": {
          "type": "string",
          "required": true,
          "description": "Account ID"
        },
        "envelopeId": {
          "type": "string",
          "required": true,
          "description": "Envelope ID"
        }
      }
    },
    {
      "name": "add_envelope_attachments",
      "description": "Add attachments to an envelope",
      "endpoint": "/restapi/v2.1/accounts/{accountId}/envelopes/{envelopeId}/attachments",
      "method": "PUT",
      "parameters": {
        "accountId": {
          "type": "string",
          "required": true,
          "description": "Account ID"
        },
        "envelopeId": {
          "type": "string",
          "required": true,
          "description": "Envelope ID"
        },
        "attachmentData": {
          "type": "string",
          "required": true,
          "description": "Base64 encoded attachment data"
        }
      }
    }
  ]
}
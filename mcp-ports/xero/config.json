{
  "name": "xero",
  "displayName": "Xero",
  "description": "Cloud-based accounting software for small businesses, providing invoicing, bank reconciliation, bookkeeping, and financial reporting in real time",
  "category": "finance",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/xero.svg",
  "port": 49515  ,
  "api": {
    "baseURL": "https://api.composio.dev",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/xero"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "string",
        "required": true,
        "description": "Xero OAuth2 Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Xero OAuth2 Client Secret"
      },
      {
        "name": "oauth_redirect_uri",
        "type": "string",
        "required": false,
        "description": "OAuth2 Redirect URI",
        "default": "https://backend.composio.dev/api/v1/auth-apps/add"
      },
      {
        "name": "scopes",
        "type": "string",
        "required": false,
        "description": "OAuth2 scopes",
        "default": "accounting.transactions.read accounting.transactions offline_access"
      }
    ]
  },
  "tools": [
    {
      "name": "get_connections",
      "description": "Get all connections for the authenticated user",
      "endpoint": "/tools/xero/get_connections",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "get_contacts",
      "description": "Retrieve contacts from Xero",
      "endpoint": "/tools/xero/get_contacts",
      "method": "GET",
      "parameters": {
        "where": {
          "type": "string",
          "required": false,
          "description": "Filter criteria for contacts"
        },
        "order": {
          "type": "string",
          "required": false,
          "description": "Sort order for contacts"
        }
      }
    },
    {
      "name": "get_quotes",
      "description": "Retrieve quotes from Xero",
      "endpoint": "/tools/xero/get_quotes",
      "method": "GET",
      "parameters": {
        "where": {
          "type": "string",
          "required": false,
          "description": "Filter criteria for quotes"
        },
        "order": {
          "type": "string",
          "required": false,
          "description": "Sort order for quotes"
        }
      }
    },
    {
      "name": "update_invoice",
      "description": "Update an existing invoice in Xero",
      "endpoint": "/tools/xero/update_invoice",
      "method": "PUT",
      "parameters": {
        "invoice_id": {
          "type": "string",
          "required": true,
          "description": "ID of the invoice to update"
        },
        "invoice_data": {
          "type": "object",
          "required": true,
          "description": "Updated invoice data"
        }
      }
    }
  ]
}
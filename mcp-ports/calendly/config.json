{
  "name": "calendly",
  "displayName": "Calendly",
  "description": "Scheduling platform for booking meetings and managing calendar events",
  "category": "productivity",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/calendly.svg",
  "port": 49227  ,
  "api": {
    "baseURL": "https://api.calendly.com",
    "version": "v1",
    "documentation": "https://developer.calendly.com/api-docs"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Calendly OAuth Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Calendly OAuth Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["default"],
      "authorization_url": "https://auth.calendly.com/oauth/authorize",
      "token_url": "https://auth.calendly.com/oauth/token"
    }
  },
  "tools": [
    {
      "name": "get_user",
      "description": "Get current user information",
      "endpoint": "/users/me",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "list_event_types",
      "description": "List user's event types",
      "endpoint": "/event_types",
      "method": "GET",
      "parameters": {
        "user": {
          "type": "string",
          "required": true,
          "description": "User URI"
        }
      }
    },
    {
      "name": "list_scheduled_events",
      "description": "List scheduled events",
      "endpoint": "/scheduled_events",
      "method": "GET",
      "parameters": {
        "user": {
          "type": "string",
          "required": false,
          "description": "User URI to filter events"
        },
        "min_start_time": {
          "type": "string",
          "required": false,
          "description": "Minimum start time (ISO 8601)"
        },
        "max_start_time": {
          "type": "string",
          "required": false,
          "description": "Maximum start time (ISO 8601)"
        }
      }
    },
    {
      "name": "get_event_details",
      "description": "Get details of a specific scheduled event",
      "endpoint": "/scheduled_events/{uuid}",
      "method": "GET",
      "parameters": {
        "uuid": {
          "type": "string",
          "required": true,
          "description": "Event UUID"
        }
      }
    }
  ]
}
{
  "name": "bigmailer",
  "displayName": "BigMailer",
  "description": "Email marketing platform designed for managing multiple brands, offering features like white-labeling, automation, and integration with Amazon SES",
  "category": "email",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/email.svg",
  "port": 49198   ,
  "api": {
    "baseURL": "https://api.bigmailer.io",
    "version": "1.0",
    "documentation": "https://v3.docs.composio.dev/tools/bigmailer"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "BigMailer API Key"
      },
      {
        "name": "user_id",
        "type": "text",
        "required": false,
        "description": "BigMailer User ID"
      }
    ]
  },
  "tools": [
    {
      "name": "create_transactional_campaign",
      "description": "Create a new transactional email campaign",
      "endpoint": "/campaigns/transactional",
      "method": "POST",
      "parameters": {
        "brand_id": {
          "type": "string",
          "required": true,
          "description": "Brand ID for the campaign"
        },
        "name": {
          "type": "string",
          "required": true,
          "description": "Campaign name"
        },
        "subject": {
          "type": "string",
          "required": true,
          "description": "Email subject line"
        },
        "from_name": {
          "type": "string",
          "required": true,
          "description": "Sender name"
        },
        "from_email": {
          "type": "string",
          "required": true,
          "description": "Sender email address"
        },
        "html_content": {
          "type": "string",
          "required": true,
          "description": "HTML content of the email"
        }
      }
    },
    {
      "name": "get_user_info",
      "description": "Get information about the authenticated user",
      "endpoint": "/user",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "list_brands",
      "description": "List all brands associated with the account",
      "endpoint": "/brands",
      "method": "GET",
      "parameters": {}
    }
  ]
}
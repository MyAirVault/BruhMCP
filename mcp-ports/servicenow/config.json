{
  "name": "servicenow",
  "displayName": "ServiceNow",
  "description": "IT Service Management platform to transform service management, boost productivity and maximize ROI",
  "category": "analytics",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/servicenow.svg",
  "port": 49451  ,
  "api": {
    "baseURL": "https://{subdomain}.service-now.com/api/now",
    "version": "v1",
    "documentation": "https://docs.servicenow.com/csh?topicname=c_TableAPI.html"
  },
  "auth": {
    "type": "basic",
    "fields": [
      {
        "name": "subdomain",
        "type": "text",
        "required": true,
        "description": "ServiceNow instance subdomain"
      },
      {
        "name": "username",
        "type": "text",
        "required": true,
        "description": "ServiceNow username"
      },
      {
        "name": "password",
        "type": "password",
        "required": true,
        "description": "ServiceNow password"
      }
    ]
  },
  "tools": [
    {
      "name": "get_records",
      "description": "Retrieves records from a specified ServiceNow table",
      "endpoint": "/table/{table_name}",
      "method": "GET",
      "parameters": {
        "table_name": {
          "type": "string",
          "required": true,
          "description": "Name of the ServiceNow table"
        },
        "sysparm_limit": {
          "type": "number",
          "required": false,
          "description": "Maximum number of records to return",
          "default": 20
        },
        "sysparm_query": {
          "type": "string",
          "required": false,
          "description": "Query filter for records"
        },
        "sysparm_display_value": {
          "type": "string",
          "required": false,
          "description": "Return display values instead of actual values",
          "default": "false"
        }
      }
    },
    {
      "name": "create_record",
      "description": "Creates a new record in a specified ServiceNow table",
      "endpoint": "/table/{table_name}",
      "method": "POST",
      "parameters": {
        "table_name": {
          "type": "string",
          "required": true,
          "description": "Name of the ServiceNow table"
        },
        "sysparm_display_value": {
          "type": "string",
          "required": false,
          "description": "Return display values instead of actual values",
          "default": "false"
        }
      }
    },
    {
      "name": "update_record",
      "description": "Updates an existing record in a specified ServiceNow table",
      "endpoint": "/table/{table_name}/{sys_id}",
      "method": "PUT",
      "parameters": {
        "table_name": {
          "type": "string",
          "required": true,
          "description": "Name of the ServiceNow table"
        },
        "sys_id": {
          "type": "string",
          "required": true,
          "description": "System ID of the record to update"
        },
        "sysparm_display_value": {
          "type": "string",
          "required": false,
          "description": "Return display values instead of actual values",
          "default": "false"
        }
      }
    },
    {
      "name": "delete_record",
      "description": "Deletes a record from a specified ServiceNow table",
      "endpoint": "/table/{table_name}/{sys_id}",
      "method": "DELETE",
      "parameters": {
        "table_name": {
          "type": "string",
          "required": true,
          "description": "Name of the ServiceNow table"
        },
        "sys_id": {
          "type": "string",
          "required": true,
          "description": "System ID of the record to delete"
        }
      }
    },
    {
      "name": "attach_file_to_record",
      "description": "Attaches a file to a specified record in a ServiceNow table",
      "endpoint": "/attachment/file",
      "method": "POST",
      "parameters": {
        "table_name": {
          "type": "string",
          "required": true,
          "description": "Name of the ServiceNow table"
        },
        "record_sys_id": {
          "type": "string",
          "required": true,
          "description": "System ID of the record to attach file to"
        },
        "file_name": {
          "type": "string",
          "required": true,
          "description": "Name of the file to attach"
        },
        "file_to_upload": {
          "type": "object",
          "required": true,
          "description": "File content to upload"
        }
      }
    },
    {
      "name": "find_file",
      "description": "Finds files in ServiceNow attachment tables",
      "endpoint": "/attachment",
      "method": "GET",
      "parameters": {
        "sysparm_query": {
          "type": "string",
          "required": false,
          "description": "Query filter for files"
        },
        "sysparm_limit": {
          "type": "string",
          "required": false,
          "description": "Maximum number of files to return",
          "default": "1000"
        }
      }
    },
    {
      "name": "get_incident",
      "description": "Get incident record details",
      "endpoint": "/table/incident/{sys_id}",
      "method": "GET",
      "parameters": {
        "sys_id": {
          "type": "string",
          "required": true,
          "description": "System ID of the incident"
        }
      }
    },
    {
      "name": "create_incident",
      "description": "Create a new incident record",
      "endpoint": "/table/incident",
      "method": "POST",
      "parameters": {
        "short_description": {
          "type": "string",
          "required": true,
          "description": "Brief description of the incident"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Detailed description of the incident"
        },
        "priority": {
          "type": "string",
          "required": false,
          "description": "Priority level of the incident"
        },
        "category": {
          "type": "string",
          "required": false,
          "description": "Category of the incident"
        }
      }
    }
  ]
}
{
  "name": "eventbrite",
  "displayName": "Eventbrite",
  "description": "Enables organizers to plan, promote, and manage events, selling tickets and providing attendee tools for conferences, concerts, and gatherings",
  "category": "marketing",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/eventbrite.svg",
  "port": 49274  ,
  "api": {
    "baseURL": "https://www.eventbriteapi.com/v3",
    "version": "v3",
    "documentation": "https://www.eventbrite.com/platform/api"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Eventbrite OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Eventbrite OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": [
        "event:read",
        "event:write",
        "order:read",
        "order:write",
        "attendee:read",
        "attendee:write",
        "user:read",
        "user:write",
        "organizer:read",
        "organizer:write",
        "venue:read",
        "venue:write"
      ],
      "authorization_url": "https://www.eventbrite.com/oauth/authorize",
      "token_url": "https://www.eventbrite.com/oauth/token"
    }
  },
  "tools": [
    {
      "name": "get_event_categories",
      "description": "Retrieve event categories, with optional locale parameter",
      "endpoint": "/categories",
      "method": "GET",
      "parameters": {
        "locale": {
          "type": "string",
          "required": false,
          "description": "Locale for category names (e.g., 'en_US')",
          "default": "en_US"
        }
      }
    },
    {
      "name": "get_event_formats",
      "description": "List available event formats before creating or updating an event",
      "endpoint": "/formats",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "get_event_subcategories",
      "description": "List event subcategories, optionally filtered by locale",
      "endpoint": "/subcategories",
      "method": "GET",
      "parameters": {
        "locale": {
          "type": "string",
          "required": false,
          "description": "Locale for subcategory names (e.g., 'en_US')",
          "default": "en_US"
        }
      }
    },
    {
      "name": "create_event",
      "description": "Create a new event",
      "endpoint": "/events",
      "method": "POST",
      "parameters": {
        "event": {
          "type": "object",
          "required": true,
          "description": "Event data including name, description, start/end times, etc."
        }
      }
    },
    {
      "name": "get_event",
      "description": "Get event details by ID",
      "endpoint": "/events/{event_id}",
      "method": "GET",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "Event ID"
        }
      }
    },
    {
      "name": "update_event",
      "description": "Update an existing event",
      "endpoint": "/events/{event_id}",
      "method": "POST",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "Event ID"
        },
        "event": {
          "type": "object",
          "required": true,
          "description": "Updated event data"
        }
      }
    },
    {
      "name": "publish_event",
      "description": "Publish an event to make it publicly visible",
      "endpoint": "/events/{event_id}/publish",
      "method": "POST",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "Event ID"
        }
      }
    },
    {
      "name": "get_event_attendees",
      "description": "Get list of attendees for an event",
      "endpoint": "/events/{event_id}/attendees",
      "method": "GET",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "Event ID"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "Filter by attendee status"
        }
      }
    },
    {
      "name": "get_event_orders",
      "description": "Get list of orders for an event",
      "endpoint": "/events/{event_id}/orders",
      "method": "GET",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "Event ID"
        },
        "status": {
          "type": "string",
          "required": false,
          "description": "Filter by order status"
        }
      }
    },
    {
      "name": "create_ticket_class",
      "description": "Create a ticket class for an event",
      "endpoint": "/events/{event_id}/ticket_classes",
      "method": "POST",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "Event ID"
        },
        "ticket_class": {
          "type": "object",
          "required": true,
          "description": "Ticket class data including name, price, quantity, etc."
        }
      }
    }
  ]
}
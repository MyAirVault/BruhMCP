{
  "name": "figma",
  "displayName": "Figma",
  "description": "Design collaboration platform with vector graphics editor and design systems",
  "category": "design",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/figma.svg",
  "port": 49280  ,
  "api": {
    "baseURL": "https://api.figma.com/v1",
    "version": "v1",
    "documentation": "https://www.figma.com/developers/api"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "Figma Personal Access Token (starts with 'figd_')"
      }
    ]
  },
  "tools": [
    {
      "name": "get_user_info",
      "description": "Get current user information from Figma",
      "endpoint": "/me",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "list_files",
      "description": "List files from Figma",
      "endpoint": "/me/files",
      "method": "GET",
      "parameters": {}
    },
    {
      "name": "get_file_details",
      "description": "Get detailed information about a specific file",
      "endpoint": "/files/{fileKey}",
      "method": "GET",
      "parameters": {
        "fileKey": {
          "type": "string",
          "required": true,
          "description": "The file key to get details for"
        }
      }
    },
    {
      "name": "get_team_projects",
      "description": "Get projects for a specific team",
      "endpoint": "/teams/{teamId}/projects",
      "method": "GET",
      "parameters": {
        "teamId": {
          "type": "string",
          "required": true,
          "description": "The team ID to get projects for"
        }
      }
    },
    {
      "name": "create_comment",
      "description": "Create a comment on a Figma file",
      "endpoint": "/files/{fileKey}/comments",
      "method": "POST",
      "parameters": {
        "fileKey": {
          "type": "string",
          "required": true,
          "description": "The file key to comment on"
        },
        "message": {
          "type": "string",
          "required": true,
          "description": "The comment message"
        }
      }
    }
  ]
}
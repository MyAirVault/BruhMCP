{
  "name": "monday",
  "displayName": "Monday.com",
  "description": "Monday.com is a customizable work management platform for project planning, collaboration, and automation",
  "category": "productivity",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/monday.svg",
  "port": 49375  ,
  "api": {
    "baseURL": "https://api.composio.dev",
    "version": "v1",
    "documentation": "https://v3.docs.composio.dev/tools/monday"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Monday.com OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Monday.com OAuth App Client Secret"
      },
      {
        "name": "bearer_token",
        "type": "password",
        "required": false,
        "description": "Monday.com Bearer Token (alternative to OAuth)"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["boards:read", "boards:write"],
      "authorization_url": "https://auth.monday.com/oauth2/authorize",
      "token_url": "https://auth.monday.com/oauth2/token"
    }
  },
  "tools": [
    {
      "name": "create_board",
      "description": "Create a new board",
      "endpoint": "/tools/monday/create_board",
      "method": "POST",
      "parameters": {
        "board_name": {
          "type": "string",
          "required": true,
          "description": "Name of the board"
        },
        "board_kind": {
          "type": "string",
          "required": false,
          "description": "Kind of board (public, private, share)"
        },
        "workspace_id": {
          "type": "string",
          "required": false,
          "description": "Workspace ID"
        }
      }
    },
    {
      "name": "add_users_to_board",
      "description": "Add users to a board",
      "endpoint": "/tools/monday/add_users_to_board",
      "method": "POST",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID"
        },
        "user_ids": {
          "type": "array",
          "required": true,
          "description": "Array of user IDs to add"
        },
        "kind": {
          "type": "string",
          "required": false,
          "description": "Kind of user access (owner, subscriber)"
        }
      }
    },
    {
      "name": "create_item",
      "description": "Create a new item in a board",
      "endpoint": "/tools/monday/create_item",
      "method": "POST",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID"
        },
        "item_name": {
          "type": "string",
          "required": true,
          "description": "Item name"
        },
        "group_id": {
          "type": "string",
          "required": false,
          "description": "Group ID"
        },
        "column_values": {
          "type": "object",
          "required": false,
          "description": "Column values object"
        }
      }
    },
    {
      "name": "list_boards",
      "description": "List all boards",
      "endpoint": "/tools/monday/list_boards",
      "method": "GET",
      "parameters": {
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of boards to return"
        }
      }
    },
    {
      "name": "list_items",
      "description": "List items in a board",
      "endpoint": "/tools/monday/list_items",
      "method": "GET",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of items to return"
        }
      }
    },
    {
      "name": "change_column_value",
      "description": "Change column value for an item",
      "endpoint": "/tools/monday/change_column_value",
      "method": "PUT",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID"
        },
        "item_id": {
          "type": "string",
          "required": true,
          "description": "Item ID"
        },
        "column_id": {
          "type": "string",
          "required": true,
          "description": "Column ID"
        },
        "value": {
          "type": "string",
          "required": true,
          "description": "New column value"
        }
      }
    },
    {
      "name": "move_item_to_group",
      "description": "Move item to a different group",
      "endpoint": "/tools/monday/move_item_to_group",
      "method": "PUT",
      "parameters": {
        "item_id": {
          "type": "string",
          "required": true,
          "description": "Item ID to move"
        },
        "group_id": {
          "type": "string",
          "required": true,
          "description": "Target group ID"
        }
      }
    },
    {
      "name": "archive_board",
      "description": "Archive a board",
      "endpoint": "/tools/monday/archive_board",
      "method": "POST",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID to archive"
        }
      }
    },
    {
      "name": "delete_board",
      "description": "Delete a board",
      "endpoint": "/tools/monday/delete_board",
      "method": "DELETE",
      "parameters": {
        "board_id": {
          "type": "string",
          "required": true,
          "description": "Board ID to delete"
        }
      }
    },
    {
      "name": "delete_item",
      "description": "Delete an item",
      "endpoint": "/tools/monday/delete_item",
      "method": "DELETE",
      "parameters": {
        "item_id": {
          "type": "string",
          "required": true,
          "description": "Item ID to delete"
        }
      }
    }
  ]
}
{
  "name": "ahrefs",
  "displayName": "Ahrefs",
  "description": "SEO and marketing platform offering site audits, keyword research, content analysis, and competitive insights",
  "category": "marketing",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/ahrefs.svg",
  "port": 49170    ,
  "api": {
    "baseURL": "https://apiv2.ahrefs.com",
    "version": "v2",
    "documentation": "https://ahrefs.com/api/documentation"
  },
  "auth": {
    "type": "api_key",
    "fields": [
      {
        "name": "api_key",
        "type": "password",
        "required": true,
        "description": "Ahrefs API Key"
      }
    ]
  },
  "tools": [
    {
      "name": "get_backlinks_stats",
      "description": "Retrieves comprehensive backlink statistics for a specified website or URL",
      "endpoint": "/backlinks-stats",
      "method": "GET",
      "parameters": {
        "target": {
          "type": "string",
          "required": true,
          "description": "Target URL or domain to analyze"
        },
        "mode": {
          "type": "string",
          "required": false,
          "description": "Analysis mode (domain, subdomain, url, etc.)",
          "default": "domain"
        },
        "date": {
          "type": "string",
          "required": false,
          "description": "Date for historical data (YYYY-MM-DD)"
        },
        "protocol": {
          "type": "string",
          "required": false,
          "description": "Protocol filter (http, https, both)",
          "default": "both"
        },
        "output": {
          "type": "string",
          "required": false,
          "description": "Output format",
          "default": "json"
        }
      }
    },
    {
      "name": "fetch_backlinks",
      "description": "Retrieves a comprehensive list of backlinks for a specified website or URL",
      "endpoint": "/backlinks",
      "method": "GET",
      "parameters": {
        "target": {
          "type": "string",
          "required": true,
          "description": "Target URL or domain to analyze"
        },
        "mode": {
          "type": "string",
          "required": false,
          "description": "Analysis mode (domain, subdomain, url, etc.)",
          "default": "domain"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of results to return",
          "default": 1000
        },
        "offset": {
          "type": "number",
          "required": false,
          "description": "Number of results to skip",
          "default": 0
        },
        "order_by": {
          "type": "string",
          "required": false,
          "description": "Field to order results by",
          "default": "domain_rating"
        },
        "protocol": {
          "type": "string",
          "required": false,
          "description": "Protocol filter (http, https, both)",
          "default": "both"
        },
        "output": {
          "type": "string",
          "required": false,
          "description": "Output format",
          "default": "json"
        }
      }
    },
    {
      "name": "get_domain_rating",
      "description": "Get domain rating and URL rating for a target domain",
      "endpoint": "/metrics",
      "method": "GET",
      "parameters": {
        "target": {
          "type": "string",
          "required": true,
          "description": "Target domain to analyze"
        },
        "output": {
          "type": "string",
          "required": false,
          "description": "Output format",
          "default": "json"
        }
      }
    },
    {
      "name": "get_organic_keywords",
      "description": "Get organic keywords ranking for a target domain",
      "endpoint": "/organic-keywords",
      "method": "GET",
      "parameters": {
        "target": {
          "type": "string",
          "required": true,
          "description": "Target domain to analyze"
        },
        "country": {
          "type": "string",
          "required": false,
          "description": "Country code for search results",
          "default": "us"
        },
        "limit": {
          "type": "number",
          "required": false,
          "description": "Number of results to return",
          "default": 1000
        },
        "offset": {
          "type": "number",
          "required": false,
          "description": "Number of results to skip",
          "default": 0
        },
        "output": {
          "type": "string",
          "required": false,
          "description": "Output format",
          "default": "json"
        }
      }
    }
  ]
}
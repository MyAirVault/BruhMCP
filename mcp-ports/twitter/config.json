{
  "name": "twitter",
  "displayName": "Twitter/X",
  "description": "Twitter/X is a social media platform for sharing short messages, engaging with users, and building communities",
  "category": "social",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/x.svg",
  "port": 49496  ,
  "api": {
    "baseURL": "https://api.x.com",
    "version": "v2",
    "documentation": "https://v3.docs.composio.dev/tools/twitter"
  },
  "auth": {
    "type": "oauth2",
    "fields": [
      {
        "name": "client_id",
        "type": "text",
        "required": true,
        "description": "Twitter OAuth App Client ID"
      },
      {
        "name": "client_secret",
        "type": "password",
        "required": true,
        "description": "Twitter OAuth App Client Secret"
      }
    ],
    "oauth": {
      "redirect_uri": "https://backend.composio.dev/api/v1/auth-apps/add",
      "scopes": ["tweet.read", "tweet.write", "users.read", "follows.read", "follows.write", "like.read", "like.write"],
      "authorization_url": "https://twitter.com/i/oauth2/authorize",
      "token_url": "https://api.twitter.com/2/oauth2/token"
    }
  },
  "tools": [
    {
      "name": "create_post",
      "description": "Create a new tweet/post",
      "endpoint": "/tools/twitter/create_post",
      "method": "POST",
      "parameters": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Tweet content"
        }
      }
    },
    {
      "name": "create_list",
      "description": "Create a new list",
      "endpoint": "/tools/twitter/create_list",
      "method": "POST",
      "parameters": {
        "name": {
          "type": "string",
          "required": true,
          "description": "List name"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "List description"
        }
      }
    },
    {
      "name": "follow_user",
      "description": "Follow a user",
      "endpoint": "/tools/twitter/follow_user",
      "method": "POST",
      "parameters": {
        "user_id": {
          "type": "string",
          "required": true,
          "description": "User ID to follow"
        }
      }
    },
    {
      "name": "unfollow_user",
      "description": "Unfollow a user",
      "endpoint": "/tools/twitter/unfollow_user",
      "method": "POST",
      "parameters": {
        "user_id": {
          "type": "string",
          "required": true,
          "description": "User ID to unfollow"
        }
      }
    },
    {
      "name": "delete_tweet",
      "description": "Delete a tweet",
      "endpoint": "/tools/twitter/delete_tweet",
      "method": "DELETE",
      "parameters": {
        "tweet_id": {
          "type": "string",
          "required": true,
          "description": "Tweet ID to delete"
        }
      }
    },
    {
      "name": "lookup_user",
      "description": "Look up user information",
      "endpoint": "/tools/twitter/lookup_user",
      "method": "GET",
      "parameters": {
        "username": {
          "type": "string",
          "required": true,
          "description": "Username to look up"
        }
      }
    }
  ]
}